<div class="search-form__results-summary">
  {% if searcher.result_count > 0 %}
    <p>There are no results to show for your current query.</p>
  {% else %}
    <p>{{ searcher.result_count }} Results Found</p>
    <div class="search-form__results-sort-by">
      <p>Sort by:</p>
      <ul class="dropdown">
        <span data-toggle="dropdown" class="dropdown-toggle">
          Rating
          <span class="caret"></span>
        </span>

        <ul class="dropdown-menu">
          <li><a href="#">Price</a></li>
          <li><a href="#">Proximity</a></li>
        </ul>
      </ul>
    </div>
  {% endif %}
</div>

<div class="search-form__results-items">
  {% comment %}TODO: Remove after static html{% endcomment %}

  {% if searcher.result_count > 0 %}
    {% for user in searcher.results %}
      {% include "search/result_item", user: user %}
    {% endfor %}


    {% comment %}TODO: Verify{% endcomment %}
    <script>
      $(function() {
        {% for user in searcher.results %}
          $(document).trigger('user:loaded', 'user-{{user.id}}')
        {% endfor %}
      });
    </script>
  {% endif %}

  {% comment %}TODO: Change condition: >{% endcomment %}
  {% if searcher.next_page != 0 %}
    <p class="search-form__results-more-trigger">
      <button type="button" class="button-a button-lg" data-page='{{ searcher.next_page }}'>SHOW MORE RESULTS</button>
    </p>
  {% endif %}
</div>
