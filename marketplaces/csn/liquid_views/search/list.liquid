<main id="main">
  <div class="wrapper-a">
    <form action="/search" method="get" class="search-form no_inheritance">
      <fieldset class="search-form__query">
        {% include "search/query" %}
      </fieldset>

      <fieldset class="search-form__filters" data-search-container="filters">
        {% include "search/basic_filters" %}
      </fieldset>

        {% comment %}
        <div class="search-sort-order">
          <label for="search-order">Sort by:</label>
          <span class="select-a">
            <select id="search-order" name="sort" class="unstyled-select">
              <option {% if params['sort'] == blank %}selected{% endif %} value=''>Relevance</option>
              <option {% if params['sort'] == 'custom_attributes.company_name_asc' %}selected{% endif %} value='custom_attributes.company_name_asc'>Company name</option>
            </select>
          </span>
        </div>
        {% endcomment %}

      <div class="search-form__results" data-search-container="results">
        {% comment %}
        <header class="search-results-header">
          <div class="search-results-query-info">
            <span class="results-count"><b>{{ searcher.result_count }}</b> Result(s) Found</span>
          </div>
        </header>
        {% endcomment %}

        <div class="search-form__results-summary">
          {% if searcher.result_count > 0 %}
            <p>There are no results to show for your current query.</p>
          {% else %}
            <p>{{ searcher.result_count }} Results Found</p>
            <div class="search-form__results-sort-by">
              <p>Sort by:</p>
              <ul class="dropdown">
                <span data-toggle="dropdown" class="dropdown-toggle">
                  Rating
                  <span class="caret"></span>
                </span>

                <ul class="dropdown-menu">
                  <li><a href="#">Price</a></li>
                  <li><a href="#">Proximity</a></li>
                </ul>
              </ul>
            </div>
          {% endif %}
        </div>

        <div class="search-form__results-items">
          <article class="search-results-item" id="user-{{ user.id }}" itemscope itemtype="http://schema.org/Organization">

            <div class="item-action-bar">
              <div class="avatar">
                <img src="http://localhost:8080/assets/tmp.jpg" alt="Emory image" />
              </div>

              <ul class="actions">
                <li>
                  <a href="#" class="button-c">
                    <i class="fa fa-commenting-o"></i>
                    MESSAGE
                  </a>
                </li>
                <li>
                  <a href="#" class="button-c">
                    <i class="fa fa-heart"></i>
                    FAVORITE
                  </a>
                </li>
              </ul>
            </div>

            <div class="item-properties">
              <div class="item-properties__header">
                <h2>Emory</h2>
                <span class="item-properties-rating">
                  <i class="fa fa-star item-properties-rating__active"></i>
                  <i class="fa fa-star item-properties-rating__active"></i>
                  <i class="fa fa-star item-properties-rating__active"></i>
                  <i class="fa fa-star item-properties-rating__active"></i>
                  <i class="fa fa-star"></i>
                </span>
              </div>

              <ul class="item-properties__actions">
                <li>
                  <a href="" class="button-a">
                    <i class="fa fa-chevron-right"></i>
                    BOOK ME
                  </a>
                </li>
                <li>
                  <a href="" class="button-c">
                    <i class="fa fa-handshake-o"></i>
                    DETAILS
                  </a>
                </li>
              </ul>

              <div class="item-properties__basic">
                <p>Type: Individual</p>
                <p>Location: St. Helens Park, New South Wales, 2560 <i class="fa fa-map-marker"></i></p>
              </div>

              <div class="item-properties__categories">
                <h3>I have:</h3>
                <ul>
                  <li data-toggle="tooltip" title="Assistance with Daily Life"><i class="csn-icon assistance-daily-life"></i></li>
                  <li data-toggle="tooltip" title="Transport"><i class="csn-icon transport"></i></li>
                  <li data-toggle="tooltip" title="Assistive Technology"><i class="csn-icon assistive-technology"></i></li>
                  <li data-toggle="tooltip" title="Home"><i class="csn-icon home"></i></li>
                  <li data-toggle="tooltip" title="Coordination of Supports"><i class="csn-icon coordination-supports"></i></li>
