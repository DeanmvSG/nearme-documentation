<footer class="mastfoot">
  <div class="wrapper-a">
    <div class="row">
      <div class="col-sm-3 footer_left">
        <a href="/" class="logo">
          <img src="https://d2rw3as29v290b.cloudfront.net/instances/209/uploads/ckeditor/attachment_file/data/3404/logo.svg" alt="">
        </a>
        <div class="footer_text">
          LocalDriva is an exciting new rideshare platform connecting travelers with affordable local driver/guides in major cities across the globe.
        </div>
      </div>
      <div class="col-sm-9 footer_right">
        <div class="row">
          <div class="col-sm-3 col-xs-6 footer_block">
            <h4 class="title_sm">General</h4>
            <ul class="links_list">
              <li><a href="/">Home</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/faq">FAQ</a></li>
              <li><a href="/contact-us">Contact Us</a></li>
            </ul>
          </div>
          <div class="col-sm-3 col-xs-6 footer_block">
            <h4 class="title_sm">More</h4>
            <ul class="links_list">
              {% if current_user == blank %}
              <li><a href="/users?role=seller&amp;return_to=/transactable_types/booking/list" data-href="/users?role=seller" data-modal="true" data-modal-class="sign-up-modal" data-modal-overlay-close="disabled" url_options='{:return_to="/transactable_types/booking/list"}'>Sign Up</a></li>
              <li><a href="/users?role=buyer" data-href="/users?role=buyer" data-modal="true" data-modal-class="sign-up-modal" data-modal-overlay-close="disabled">Become a Driver</a></li>
              {% endif %}
              <li><a href="/terms-of-use">Terms of Use</a></li>
              <li><a href="/privacy-policy">Privacy Policy</a></li>
            </ul>
          </div>
          <div class="col-sm-3 col-xs-6 footer_block">
            <h4 class="title_sm">Connect</h4>
            <ul class="links_list soc_links_list">
              {% if platform_context.facebook_url != blank %}<li><a href="{{ platform_context.facebook_url }}" target="_blank"><i class="fa fa-facebook-official"></i>Facebook</a></li>{% endif %}
              {% if platform_context.twitter_url != blank %}<li><a href="{{ platform_context.twitter_url }}" target="_blank"><i class="fa fa-twitter"></i>Twitter</a></li>{% endif %}
              {% if platform_context.linkedin_url != blank %}<li><a href="{{ platform_context.linkedin_url }}" target="_blank"><i class="fa fa-linkedin-square"></i>LinkedIn</a></li>{% endif %}
              {% if platform_context.gplus_url != blank %}<li><a href="{{ platform_context.gplus_url }}" target="_blank"><i class="fa fa-google-plus"></i>Google+</a></li>{% endif %}
              {% if platform_context.blog_url != blank %}<li><a href="{{ platform_context.blog_url }}" target="_blank"><i class="fa fa-feed"></i>Blog</a></li>{% endif %}
            </ul>
          </div>
          <div class="col-sm-3 col-xs-6 footer_block">
            <h4 class="title_sm">Contact</h4>
            <div class="contact_item">
              <a href="mailto:info@localdriva.com">info@localdriva.com</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="copyright">
      <div class="row">
        <div class="col-sm-6">&copy; 2017 LocalDriva. All rights reserved.</div>
        <div class="col-sm-6 poweredby">
          <a href="#" class="powered_link">
            Powered by Near Me <i class="powered_logo"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
