{% if global_errors != blank %}
<div class="errors-global">
  <h3>{{ 'dashboard.transactables.transactable_not_saved' | translate }}</h3>
  <p>{{ 'dashboard.transactables.address_errors_html' | translate: count: global_errors.size }}</p>

  <ul>
    {% for error in global_errors %}
      <li>{{ error | remove_first: 'Properties ' | remove_first: 'Pickup location ' | remove_first: 'Number of passengers ' | remove_first: 'Driver category ' | remove_first: 'Duration ' }}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}
