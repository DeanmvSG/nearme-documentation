{% if user.buyer_properties.community_wealth or user.buyer_properties.workplace or user.buyer_properties.environment_and_health %}
  <ul class="badges-a badges-a-full">
    {% if user.buyer_properties.workplace %}
    <li class="workplace">
      <h3>Workplace</h3>
      {% unless workplace_text == blank %}
      {{ workplace_text | markdownify }}
      {% endunless %}
    </li>
    {% endif %}

    {% if user.buyer_properties.community_wealth %}
    <li class="commmunity-wealth">
      <h3>Community Wealth</h3>
      {% unless community_wealth_text == blank %}
      {{ community_wealth_text | markdownify }}
      {% endunless %}
    </li>
    {% endif %}

    {% if user.buyer_properties.environment_and_health %}
    <li class="environment-health">
      <h3>Environment &amp; Health</h3>
      {% unless environment_and_health_text == blank %}
      {{ environment_and_health_text | markdownify  }}
      {% endunless %}
      </li>
    {% endif %}
  </ul>
{% endif %}
