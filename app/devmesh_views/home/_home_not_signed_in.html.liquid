<div class="wrap-a">
  <div class="contain">
    <!-- header with button
    -->
    <div class="header-a _mBa">
      <h2 class="hx">
        {{ 'featured_topics' | translate }}
      </h2>
      <p class="tx-a">
      {{ 'featured_topics_description' | translate }}
      </p>
      <p class="action">
      <a href="/search/topics?sort=featured" class='button-a small white'>{{ 'view_all' | translate }}</a>
      </p>
    </div>
