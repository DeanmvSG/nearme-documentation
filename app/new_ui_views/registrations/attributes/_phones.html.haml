- if only_inputs.empty? || only_inputs.include?(:phone)
  %div{'data-phone-fields-container' => true}
    = f.input :country_name, :as => :select, :collection => user_country_name_options, :selected => user_country_default(@country), input_html: { 'data-country-selector' => true, class: 'selectpicker', "data-live-search" => "true", autocomplete: false }, required: f.object.validation_for(:phone).try(:is_required?), include_blank: true

    - calling_code = '&nbsp;'
    - calling_code = "+#{f.object.country.calling_code}" if f.object.country

    = f.input :phone, as: :tel, required: f.object.validation_for(:phone).try(:is_required?), prefix: calling_code, input_html: { data: { 'phone': true }}
    = f.input :mobile_number, as: :tel, required: (f.object.validation_for(:phone).try(:is_required?) || f.object.validation_for(:mobile_number).try(:is_required?)), input_html: { data: { 'mobile-number': true }}, prefix: calling_code

    = label_tag do
      = check_box_tag "#{f.object.class.name.underscore}_mobile_same_as_phone", '1', (f.object.phone == f.object.mobile_number), data: { 'same-as-phone-checkbox' => true }
      = t 'general.same_as_phone'

    - if HiddenUiControls.find('registrations/click_to_call').visible?
      %p
        = build_click_to_call_verify_button(f.object.mobile_number, f.object.country.try(:name))
