%header.dialog__header
  %h2#dialog__title= t('manage.buy_sell.shipping_profiles.shipping_profile')

- profile_add_success = defined?(is_success) ? 'true' : 'false'
= dashboard_simple_form_for @shipping_category_form, url: form_url, :html => { id: "shipping_category_form", class: 'profiles_shipping_category_form', multipart: true, method: form_method, data: { modal: true, 'modal-class' => 'shipping_profiles_modal', "profile-add-success":profile_add_success  } } do |f|
  .dialog__body
    = f.input :name

    = f.simple_fields_for :shipping_methods do |shipping_method|
      = render 'dashboard/shipping_categories/shipping_method_form', f: shipping_method

    %p.clearfix
      %button.btn.btn-primary.btn-xs.pull-right{ type: :button, data: { "shipping-category-id": @shipping_category_form.shipping_category.id, 'add-rule': true } }
        = t('manage.buy_sell.shipping_profiles.add_new_shipping_rule')

  .dialog__actions
    = submit_tag t('manage.buy_sell.shipping_profiles.save')

:javascript
  new DNM.ShippingProfilesController('form.profiles_shipping_category_form');

