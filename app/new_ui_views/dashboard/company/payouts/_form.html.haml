- if @payment_gateway.present?
  = render @merchant_account_form_path, f: f, merchant_account: @merchant_account if @merchant_account_form_path
  = f.simple_fields_for  @merchant_account.to_attr, @merchant_account do |form|
    - unless @merchant_account.payment_subscription.blank?
      = render 'dashboard/shared/fields/payment_subscription', f: form
- else
  = f.simple_fields_for :payments_mailing_address, (f.object.payments_mailing_address.presence || f.object.build_payments_mailing_address) do |address_form|

    = render 'dashboard/shared/fields/address', :f => address_form, field_label: t('payouts.mailing_address')

    = address_form.hidden_field :raw_address, value: true

