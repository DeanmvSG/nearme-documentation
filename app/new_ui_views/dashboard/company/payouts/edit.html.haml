- title t('dashboard.nav.payouts')

- content_for :page_header do
  %h1= yield :title

- yield :payout_errors

- if @payment_gateway.nil?
  .panel
    .panel-body
      %p.info= t('dashboard.payouts.merchant_boarding_missing_gateway', country_code: @company.iso_country_code, currency: @company.currency )

= dashboard_simple_form_for @company, url: dashboard_company_payouts_path, html: { 'data-payouts-form' => true, :'data-includes-address-field' => true } do |f|
  .panel
    .panel-body
      = render partial: 'form', locals: { f: f }

  - unless @merchant_account.try(:chain_payments?) || (@merchant_account.try(:verified?) && @merchant_account.try(:type) == "MerchantAccount::StripeConnectMerchantAccount")
    .panel.form-actions
      .panel-body
        = f.submit t('payouts.buttons.save')
