- content_for :page_header do
  %h1
    = link_to t("dashboard.offers.manage"), dashboard_company_offer_type_offers_path(@offer_type), class: 'hidden-xs hidden-sm'
    %span.hidden-xs.hidden-sm >
    = t("dashboard.offers.list_new_item")

= dashboard_simple_form_for [:dashboard, :company, @offer_type, @offer], :html => { :multipart => true, id: 'listing-form' } do |f|

  = render "dashboard/company/offers/errors", f: f

  = render "dashboard/company/offers/form_panels_nav", f: f

  .panel
    .panel-body
      = render 'form', f: f

  .panel.form-actions
    .panel-body
      = f.button :submit, t('dashboard.items.save')
