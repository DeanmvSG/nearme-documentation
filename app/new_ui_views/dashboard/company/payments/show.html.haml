- title "#{t('buy_sell_market.checkout.labels.payments.details')} - ID: #{@payment.id}"

- content_for :page_header do
  %h1= yield :title

  .options
    = link_to t("dashboard.payments.back_to_order_html"), dashboard_company_orders_received_path(@order)

.panel
  .panel-body
    %table.payment-summary
      %tbody
        %tr
          %th= t 'dashboard.payments.total'
          %td= humanized_money_with_cents_and_symbol(@payment.total_amount)

        %tr
          %th= t 'dashboard.payments.service_fee'
          %td= humanized_money_with_cents_and_symbol(@payment.total_service_fee)

        - if @payment.paid?
          %tr
            %th= t 'dashboard.payments.paid_at'
            %td= l @payment.paid_at, format: :long

        - if @payment.failed?
          %tr
            %th= t 'dashboard.payments.failed_at'
            %td= l @payment.failed_at, format: :long

        - if @payment.refunded?
          %tr
            %th= t 'dashboard.payments.refunded_at'
            %td= l @payment.refunded_at, format: :long

    - if @payment.paid? && !@payment.refunded?
      %p= link_to t("dashboard.payments.refund"), refund_dashboard_company_orders_received_payment_path(@order, @payment), class: 'btn btn-warning'

