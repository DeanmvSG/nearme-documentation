.promote-location
  - if locations.present?
    - locations.each do |location|
      %h2 #{location.name}
      %p= t('dashboard.host_reservations.no_reservations_promote_reservations')

      .share-location
        %span
          =link_to tweet_location_url(location_url(location)), :ref => "mg", :class => 'btn btn-primary twitter submit', :"data-popup" => '{ "width": 600, "height": 440 }' do
            %span.fa.fa-twitter
            Twitter
        %span
          =link_to "https://www.facebook.com/sharer/sharer.php?u=#{location_url(location)}", :ref => "mg", :class => 'btn btn-primary facebook submit', :"data-popup" => '{ "width": 600, "height": 440 }' do
            %span.fa.fa-facebook
            Facebook
        %span
          =link_to "http://www.linkedin.com/shareArticle?mini=true&url=#{location_url(location)}&title=#{location.name}&summary=#{location.description}&source=#{platform_context.instance.name}", :ref => "mg", :class => 'btn btn-primary linkedin submit', :"data-popup" => '{ "width": 600, "height": 440 }' do
            %span.fa.fa-linkedin
            LinkedIn
        %span
          = link_to location_url(location), :class => 'btn btn-primary' do
            %span.fa.fa-link
            = t('dashboard.host_reservations.direct_link')
  - else
    %p= t('dashboard.host_reservations.you_havent_added_anything_yet')


