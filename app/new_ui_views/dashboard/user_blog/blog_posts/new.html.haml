- title t('user_blog.titles.new')

- content_for :page_header do
  %h1= t 'user_blog.nav.new'

= dashboard_simple_form_for @blog_post, url: dashboard_blog_posts_path, html: { multipart: true } do |f|
  .panel
    .panel-body
      = render 'user_blog_post_form', f: f

  .panel.form-actions
    .panel-body
      = f.submit t('user_blog.buttons.save'), data: { disable_with: t('user_blog.labels.please_wait')}
