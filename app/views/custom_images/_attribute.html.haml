= f.hidden_field :id, value: f.object.id
= f.hidden_field :custom_attribute_id, value: ca.id
- options = { label: ca.label, as: :image }
- if f.object.persisted?
  - options[:delete_url] = dashboard_custom_image_path(f.object)
  - options[:edit_url] = edit_dashboard_custom_image_path(f.object)
  - options[:thumb] = :thumb
= f.input :image, options
