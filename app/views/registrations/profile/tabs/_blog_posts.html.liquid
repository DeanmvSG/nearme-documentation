{% for post in user.published_posts %}
  <article class='post'>
    <div class='post-head clearfix'>
      <h4 class='pull-left'><a href="{{ post.post_path }}">{{ post.title }}</a></h4>
      <p class='pull-right date'>{{ post.published_at }}</p>
    </div>
    <div class='post-body'>
      <p>
        {{ post.excerpt }}
      </p>
    </div>
  </article>
{% endfor %}

<div class='submit-bar'>
  <a class="btn green" href="{{ user.user_blog_posts_list_path }}">{{ 'user_profile.buttons.visit_blog' | translate }}</a>
</div>
