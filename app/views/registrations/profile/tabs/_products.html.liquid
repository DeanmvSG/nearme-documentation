{% assign groups = products | in_groups_of:2 %}
{% for line in groups %}
  <div class='row-fluid'>
    {% for product in line %}
      <div class='span6'>
        <a href="{{ product.url }}">
          <div class='item-img'>
            <img id="product-first-image" src="{{ product.photo_url }}" />
          </div>
          <div class='details clearfix'>
            <p>{{ product.name }}</p>
            <p class='name'>{{ product.company.name }}</p>
            <p class='price'>{{ product.display_price }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
{% endfor %}

<div class="pagination">
  {{ products | pagination_links: param_name: 'products_page', renderer: 'LiquidLinkRendererForUserPage'  }}
</div>
