$('#user-blog-posts').append('<%= j render partial: '/user_blog/blog_posts/excerpt', collection: @blog_posts,
                                           as: :blog_post %>');

<% if @blog_posts.next_page %>
$('.pagination').replaceWith('<%= j will_paginate @blog_posts %>');
<% else %>
$(window).off('scroll');
$('#spinner').remove();
<% end %>

if (history.pushState) {
    history.pushState(null, '', '<%= request.path %>/?page=<%= @blog_posts.current_page %>');
}
