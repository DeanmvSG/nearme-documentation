- render_content_outside_container!

.header
  .header-text-and-logo
    .v-wrap
      .v-box
        = link_to user_blog_posts_list_path(@user) do
          %span.header-text.visible-phone
            - if @user.blog.header_icon.present?
              = image_tag @user.blog.header_icon.url, class: ''
            - else
              = @user.blog.name

          - if @user.blog.header_logo.present?
            = image_tag @user.blog.header_logo.url, class: 'blog-logo'
          - else
            %span.header-text.hidden-phone
              = @user.blog.name



