- if only_inputs.empty? || only_inputs.include?(:password)
  = f.input :password, :label => (f.object.persisted? ? t('general.change_password') : t('general.password') ), input_html: { autocomplete: 'off' }
  = f.input :password_confirmation, :label => t('general.password_confirmation'), input_html: { autocomplete: 'off' }

