.intro
  %h1 BRAND

- content_for :inner_page do
  .content.col-md-9
    .section
      .section-head
        %h3.section-title LOGO DOWNLOADS

      .section-body
        .brands
          .row
            .col-md-6
              .brand-logo.brand-logo-light
                .brand-logo-image
                  =image_tag "platform_home/logo-01-light.png"

                %p
                  = link_to "Download", asset_url('platform_home/blue_no_text.zip'), download: ""

            .col-md-6
              .brand-logo.brand-logo-dark
                .brand-logo-image
                  =image_tag "platform_home/logo-01-dark.png"

                %p
                  = link_to "Download", asset_url('platform_home/white_no_text.zip'), download: ""

          .row
            .col-md-6
              .brand-logo.brand-logo-light
                .brand-logo-image
                  =image_tag "platform_home/logo-02-light.png"

                %p
                  = link_to "Download", asset_url('platform_home/blue_bottom_text.zip'), download: ""

            .col-md-6
              .brand-logo.brand-logo-dark
                .brand-logo-image
                  =image_tag "platform_home/logo-02-dark.png"

                %p
                  = link_to "Download", asset_url('platform_home/white_bottom_text.zip'), download: ""

          .row
            .col-md-6
              .brand-logo.brand-logo-light
                .brand-logo-image
                  =image_tag "platform_home/logo-03-light.png"

                %p
                  = link_to "Download", asset_url('platform_home/blue_side_text.zip'), download: ""

            .col-md-6
              .brand-logo.brand-logo-dark
                .brand-logo-image
                  =image_tag "platform_home/logo-03-dark.png"

                %p
                  = link_to "Download", asset_url('platform_home/white_side_text.zip'), download: ""

          .row
            .col-md-6
              .brand-logo.brand-logo-factsheet
                .brand-logo-image
                  =image_tag "platform_home/fact-sheet.png", class: "fact-sheet"

                %p
                  = link_to "Download", asset_url('platform_home/nearme_fact_sheet.png'), download: ""

= render template: "platform_home/layout/main_layout"
