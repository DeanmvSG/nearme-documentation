- title "#{platform_context.lessee.capitalize.pluralize} (#{@guest_list.reservations.size + @guest_list.recurring_bookings.size})"

= show_manage_navigation(:guests)

#guests
  %section#reservations
    .row-fluid
      .span8.offset2
        .box
          - if @guest_list.reservations_scope.empty? && @guest_list.recurring_bookings_scope.empty?
            = render 'dashboard/manage_guests/promote_locations', locations: @locations
          - else
            %header
              = render 'dashboard/guest_filter'
            = render 'dashboard/manage_guests'


- content_for :domready do
  new Dashboard.GuestsController($('#guests'))

= render 'ratings/rating_modal'
