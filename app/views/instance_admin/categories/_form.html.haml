= simple_form_for [:instance_admin, @controller_scope, @categorable, @category] do |f|
  .content-container
    .row
      .input-container.col-xs-12
        = f.input :name, placeholder: 'What is the name of the category group?', required: true, input_html: { class: 'form-control'}, label: 'New category group'
      .input-container.col-xs-12
        .col-xs-6
          = f.input :multiple_root_categories, :inline_label => true
        .col-xs-6
          = f.input :mandatory, :inline_label => true
      .input-container.col-xs-12
        .col-xs-6
          = f.input :search_options,  collection: Category::SEARCH_OPTIONS, include_blank: false,  input_html: { class: 'selectpicker', "data-live-search" => "true"}
        .col-xs-6
          = f.input :display_options,  collection: Category::DISPLAY_OPTIONS, include_blank: false,  input_html: { class: 'selectpicker', "data-live-search" => "true"}
    .row
      .input-container.col-xs-12
        = f.button :submit, class: "btn btn-blue pull-right"

