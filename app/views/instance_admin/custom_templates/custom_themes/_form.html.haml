= simple_form_for [:instance_admin, :custom_templates, resource], html: { multipart: true } do |f|
  .row
    .input-container.col-xs-12
      = f.input :name, :placeholder => 'Name', input_html: { class: 'form-control' }

  .row
    .input-container.col-xs-6
      = f.input :in_use, as: :boolean, inline_label: true
    .input-container.col-xs-6
      = f.input :in_use_for_instance_admins, as: :boolean, inline_label: true

  .row
    .input-container.col-xs-12
      - if f.object.persisted?
        = f.input :overwrite_existing, as: :boolean, hint: 'Please be very careful - checking this option can overwrite your whole work.'
      = f.input :copy_from_template, collection: CustomTheme::AVAILABLE_DEFAULT_TEMPLATES, include_blank: 'None', inline_label: true

  = content_for :header_buttons do
    = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }
    = link_to t('instance_admin.cancel'), instance_admin_custom_templates_custom_themes_url , class: 'btn pull-right'

