.content-container
  = simple_form_for @resource, url: [:instance_admin, :reports, @resource], html: {multipart: true} do |f|
    .row
      .input-container.col-xs-12
        = f.input :enabled, as: :boolean, inline_label: true
      .input-container.col-xs-12
        = f.submit t('instance_admin.save'), class: 'btn btn-blue pull-right'
