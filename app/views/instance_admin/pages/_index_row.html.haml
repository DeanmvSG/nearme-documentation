%tr
  %td= link_to page.path, instance_admin_page_path(page)
  %td
    - if page.redirect?
      = link_to page.redirect_url, page.redirect_url, target: '_blank'
    - else
      = link_to pages_path(page), pages_path(page), target: '_blank'
  %td
    = link_to 'Edit', edit_instance_admin_page_path(page), class: 'btn'
    = link_to "Delete", instance_admin_page_path(page), :method => :delete, :confirm => "Are you sure you want to delete this?", :class => "btn btn-danger"
    
