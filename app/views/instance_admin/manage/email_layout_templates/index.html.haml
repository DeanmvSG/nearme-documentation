%h4 Manage Email Layout Templates

.content-container
  .row
    = link_to 'Add Email Layout Template', new_instance_admin_manage_email_layout_template_path, class: 'pull-right btn btn-green'

.content-container
  .row
    .table-container.col-xs-12.dropshadow
      %table.table
        %tbody
          %tr
            %th Template
            %th Format
            %th
            %th
            %th

          - @email_layout_templates.each do |email_layout_template|
            %tr
              %td= pretty_path email_layout_template.path
              %td= email_layout_template.format
              %td= email_layout_template.transactable_type.try(:name)
              %td
                .pull-right
                  = link_to 'Edit', edit_instance_admin_manage_email_layout_template_path(email_layout_template)
              %td
                .pull-right
                  = link_to 'Destroy', instance_admin_manage_email_layout_template_path(email_layout_template),
                      method: :delete, data: { confirm: 'Are you sure?' }

%h4 Customize default

.content-container
  .row
    .table-container.col-xs-12.dropshadow
      %table.table
        %tbody
          %tr
            %th Template
            %th{colspan: 2} Customize

          - @not_customized_email_template_layouts_paths.each do |email_layout_template_path, formats|
            - next if formats.count == 2
            %tr
              %td= pretty_path email_layout_template_path
              - (%w(html text)- formats).each do |format|
                %td= link_to format, new_instance_admin_manage_email_layout_template_path(path: email_layout_template_path, email_format: format)

