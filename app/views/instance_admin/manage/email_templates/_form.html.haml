= simple_form_for @email_template, as: :email_template, url: @email_template.persisted? ? instance_admin_manage_email_template_path(@email_template) : instance_admin_manage_email_templates_path, method: @email_template.persisted? ? :put : :post do |f|
  %h4
    = link_to 'Manage email templates', instance_admin_manage_email_templates_url
    =  "> #{pretty_path(@email_template.path)}" if @email_template.path

  .content-container
    .row
      .input-container.col-xs-12
        = f.input :path, label: 'Template path', :placeholder => 'email/path', disabled: @email_template.persisted? && WorkflowAlert.for_email_path(@email_template.path).count > 0, input_html: { class: 'form-control' }
    .row
      .input-container.col-xs-12
        = f.association :transactable_type
    .row
      .input-container.col-xs-12
        = f.input :format, collection: ['text', 'html'], input_html: { class: 'form-control' }
    .row
      .input-container.col-xs-12
        = f.input :body, as: :text, label: 'Body', input_html: { class: 'form-control', rows: "10" }

    = f.button :submit, 'Save', class: 'btn btn-green pull-right'
    = link_to 'Cancel', instance_admin_manage_email_templates_url , class: 'pull-right'
