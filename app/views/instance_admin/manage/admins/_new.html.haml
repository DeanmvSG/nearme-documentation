= simple_form_for @user ||= User.new, url: instance_admin_manage_admins_path do |f|
  %h4 Create new admin user
  .content-container
    .row.dropshadow
      .input-container.col-xs-6
        = f.input :name, label: 'Full Name', placeholder: 'John Smith', required: false, input_html: { class: 'form-control' }
      .input-container.col-xs-6
        = f.input :email, label: 'Email', placeholder: 'example@gmail.com', required: false, input_html: { class: 'form-control' }
  .content-container
    = f.submit "Create", :class => 'btn btn-green pull-right'
  %br