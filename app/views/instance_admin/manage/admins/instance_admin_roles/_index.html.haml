.content-container
  %h4
    = t('instance_admin.manage.admins.roles')
  #instance_admin_roles
    .row
      .table-container.col-xs-12
        %table.table
          %thead
            %tr
              %th= t('instance_admin.manage.admins.role_name')
              - InstanceAdminRole::PERMISSIONS.each do |p|
                - next if p == 'BuySell'
                %th
                  = p
          %tbody
            - instance_admin_roles.each do |instance_admin_role|
              %tr.instance-admins-table
                %td
                  = instance_admin_role.name
                - InstanceAdminRole::PERMISSIONS.each do |p|
                  - next if p == 'BuySell'
                  %td
                    = check_box_tag "instance_admin_role[permission_#{p.downcase}]", true, instance_admin_role.send("permission_#{p.downcase}"), { :disabled => instance_admin_role.instance_id.nil?, :'data-role-id' => instance_admin_role.id, :id => "permission_#{p.downcase}_#{instance_admin_role.id}", :'data-permission-checkbox' => "permission_#{p.downcase}", :class => 'pull-left' }
                    .loading{:'data-loading' => true}
                      = image_tag('spinner_mini.gif')
                %td
                  - if instance_admin_role.instance_id.present?
                    = link_to instance_admin_manage_admins_instance_admin_role_path(instance_admin_role),
                        method: :delete, data: { confirm: t('instance_admin.are_you_sure') } do
                      .fa.fa-trash-o.fa-2x.inline-form-icon
