%form#instance_admins_form
  %h4 Admin
  .content-container
    .row
      .table-container.col-xs-12.dropshadow
        %table.table
          %thead
            %tr
              %th Admin
              %th Role
              %th
          %tbody
            - platform_context.instance.instance_admins.each do |instance_admin|
              %tr.instance-admins-table
                %td
                  = instance_admin.name
                %td
                  - if instance_admin.instance_owner
                    Instance Owner
                  -else
                    = select_tag :instance_admin_role_id, options_from_collection_for_select(instance_admin_roles, "id", "name", instance_admin.instance_admin_role.id), :'data-role-select' => true, :'data-instance-admin-id' => instance_admin.id, :class => 'pull-left'
                    .loading{:'data-loading' => true}
                      = image_tag('spinner_mini.gif')
                %td
                  - unless instance_admin.instance_owner
                    .pull-right
                      = link_to instance_admin_manage_admins_instance_admin_path(instance_admin), :method => :delete,
                          data: { confirm: 'Are you sure?' } do
                        .fa.fa-trash-o.fa-2x.inline-form-icon
