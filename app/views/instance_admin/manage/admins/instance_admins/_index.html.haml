.content-container
  %h4= t('instance_admin.manage.admins.admin')
  %form#instance_admins_form
    .row
      .table-container.col-xs-12
        %table.table
          %thead
            %tr
              %th= t('instance_admin.manage.admins.admin')
              %th= t('instance_admin.manage.admins.email')
              %th= t('instance_admin.manage.admins.role')
              -if current_user.is_instance_owner?
                %th= t('instance_admin.manage.admins.switch_owner')
              %th
          %tbody
            - platform_context.instance.instance_admins.sort.each do |instance_admin|
              %tr.instance-admins-table
                %td
                  = instance_admin.name
                %td
                  = instance_admin.user.try(:email)
                %td
                  - if instance_admin.instance_owner
                    = t('instance_admin.manage.admins.instance_owner')
                  -else
                    = select_tag :instance_admin_role_id, options_from_collection_for_select(instance_admin_roles, "id", "name", instance_admin.instance_admin_role.id), :'data-role-select' => true, :'data-instance-admin-id' => instance_admin.id, :class => 'pull-left'
                    .loading{:'data-loading' => true}
                      = image_tag('spinner_mini.gif')
                -if current_user.is_instance_owner?
                  %td
                    - unless instance_admin.instance_owner
                      = link_to t('instance_admin.manage.admins.make_owner'), instance_admin_manage_admins_instance_admin_path(instance_admin, mark_as_owner: true), :method => :put, data: {:confirm => "Are you sure you want to transfer ownership of this instance? Only the new owner will be able to revert this change."}
                %td
                  - unless instance_admin.instance_owner
                    .pull-right
                      = link_to instance_admin_manage_admins_instance_admin_path(instance_admin), :method => :delete,
                          data: { confirm: t('instance_admin.are_you_sure') } do
                        .fa.fa-trash-o.fa-2x.inline-form-icon
