= simple_form_for @instance, url: instance_admin_manage_search_settings_path, method: :put, html: { multipart: true } do |f|

  - if include_select_engine
    %h4.control-label
      %b= t('instance_admin.manage.search.type_of_search')
  
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :search_engine, collection: Instance::SEARCH_ENGINES, include_blank: false, input_html: { class: 'form-control' }

    %hr
          

  %h4.control-label
    %b= search_title

  .row
    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :searcher_type, collection: Instance::SEARCH_TYPES.map { |s| [s.humanize, s]}, include_blank: false, input_html: { class: 'form-control' }

    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :tt_select_type, collection: %w(dropdown radio), include_blank: false, input_html: { class: 'form-control' }

  .row
    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :default_search_view, collection: Instance::SEARCH_SERVICE_VIEWS, include_blank: false, input_html: { class: 'form-control' }

    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :default_products_search_view, collection: Instance::SEARCH_PRODUCTS_VIEWS, include_blank: false, input_html: { class: 'form-control' }

  %hr
  %h4= t('instance_admin.manage.search.date_pickers')
  
  .row
    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :date_pickers, as: :boolean, inline_label: true

    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :date_pickers_use_availability_rules, as: :boolean, inline_label: true

  .row

    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :date_pickers_mode, collection: %w(relative absolute), include_blank: false, input_html: { class: 'form-control' }

  - if include_radius
    %hr
    %h4= t('instance_admin.manage.search.search_radius')

    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :search_radius, as: :integer, input_html: { class: 'form-control' }
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :search_text, as: :string, input_html: { class: 'form-control' }

  %h4= t('instance_admin.manage.search.category_tree_search')
  .row
    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :taxonomy_tree, as: :boolean, inline_label: true
    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :category_search_type, collection: %w(AND OR), include_blank: false,
            input_html: { class: 'form-control' }
  .row

  %h4= t('instance_admin.manage.search.saved_search')
  .row
    .input-container.col-xs-12
      .input-col-clearfix
        = f.input :saved_search, as: :boolean, inline_label: true

  %h4= t('instance_admin.manage.search.price_filters')

  .row
    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :price_slider, as: :boolean, inline_label: true

    .input-container.col-xs-6
      .input-col-clearfix
        = f.input :price_types, as: :boolean, inline_label: true

  = content_for :header_buttons do
    = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }
