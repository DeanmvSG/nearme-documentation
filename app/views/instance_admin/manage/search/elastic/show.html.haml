.content-container
  = render partial: 'instance_admin/manage/search/tabs', locals: {tab: :elastic}

  = simple_form_for @instance, url: instance_admin_manage_search_elastic_path, method: :put, html: { multipart: true } do |f|
  
    %h4.control-label
      %b= t('instance_admin.manage.search.elastic_search.last_index_status')
    
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = @job_status
  
    %hr
  
    = content_for :header_buttons do
      = f.button :submit, t('instance_admin.manage.search.elastic_search.perform_reindex'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }  
