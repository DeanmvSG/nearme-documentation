.content-container
  = render partial: 'instance_admin/manage/search/tabs', locals: {tab: :global}

  = simple_form_for @instance, url: instance_admin_manage_search_path, method: :put, html: { multipart: true } do |f|
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :tt_select_type, collection: %w(dropdown radio), include_blank: false, input_html: { class: 'form-control' }
    .row
      .input-container.col-xs-6
        = f.label :listing_type_order
        %ul.sortable{ data: { update_url: sort_transactable_types_instance_admin_manage_search_path}}
          - @transactable_types.each do |tt|
            %li{id: "tt_#{tt.id}"}= tt.name

    = content_for :header_buttons do
      = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }

= content_for :script do
  :javascript
    new InstanceAdmin.SearchSettings()
