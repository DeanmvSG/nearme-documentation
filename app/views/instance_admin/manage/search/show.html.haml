%h4 Search

= simple_form_for @instance, url: instance_admin_manage_search_path, method: :put, html: { multipart: true } do |f|
  .content-container.dropshadow
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :searcher_type, collection: Instance::SEARCH_TYPES, include_blank: false,
            input_html: { class: 'form-control' }

      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :default_search_view, collection: Instance::SEARCH_RESULTS_VIEWS, include_blank: false,
          input_html: { class: 'form-control' }

    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :date_pickers, as: :boolean, input_html: { class: 'form-control' }

      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :tt_select_type, collection: %w(dropdown radio), include_blank: false, input_html: { class: 'form-control' }

    .row


  .content-container
    .row
      = f.button :submit, 'Save', class: 'btn btn-green pull-right', data: { disable_with: t('user_blog.labels.please_wait')}

