%h4 Search

= simple_form_for @instance, url: instance_admin_manage_search_path, method: :put, html: { multipart: true } do |f|
  .content-container.dropshadow
    .row
      .input-container.col-xs-3
        .input-col-clearfix
          = f.input :searcher_type, collection: Instance::SEARCH_TYPES.map { |s| [s.humanize, s]}, include_blank: false,
            input_html: { class: 'form-control' }

      .input-container.col-xs-3
        .input-col-clearfix
          = f.input :default_search_view, collection: Instance::SEARCH_SERVICE_VIEWS, include_blank: false,
          input_html: { class: 'form-control' }, label: 'Service view'

      .input-container.col-xs-3
        .input-col-clearfix
          = f.input :default_products_search_view, collection: Instance::SEARCH_PRODUCTS_VIEWS, include_blank: false,
          input_html: { class: 'form-control' }, label: 'Products view'

      .input-container.col-xs-3
        .input-col-clearfix
          = f.input :tt_select_type, collection: %w(dropdown radio), include_blank: false,
              input_html: { class: 'form-control' }, label: 'Listing type UI'

  %h4 Date pickers

  .content-container.dropshadow
    .row
      .input-container.col-xs-4
        .input-col-clearfix
          = f.input :date_pickers, as: :boolean, label: 'Enable date pickers'

      .input-container.col-xs-4
        .input-col-clearfix
          = f.input :date_pickers_use_availability_rules, as: :boolean,
              label: 'Use availability rules'

      .input-container.col-xs-4
        .input-col-clearfix
          = f.input :date_pickers_mode, collection: %w(relative absolute), include_blank: false,
              input_html: { class: 'form-control' }, label: 'Search Mode'

  %h4 Category tree search

  .content-container.dropshadow
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :taxonomy_tree, as: :boolean, label: 'Enable category tree'
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :category_search_type, collection: %w(AND OR), include_blank: false,
              input_html: { class: 'form-control' }
    .row

  %h4 Saved Search

  .content-container.dropshadow
    .row
      .input-container.col-xs-12
        .input-col-clearfix
          = f.input :saved_search, as: :boolean, label: 'Enable saved search'

    .row

  %h4 Price filters

  .content-container.dropshadow
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :price_slider, as: :boolean, label: 'Enable price slider'

      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :price_types, as: :boolean, label: 'Enable price types'

    .row

  .content-container
    .row
      = f.button :submit, 'Save', class: 'btn btn-green pull-right', data: { disable_with: t('user_blog.labels.please_wait')}

