.content-container
  = simple_form_for @service_type, url: [:instance_admin, :manage, @service_type] do |f|
    %input{ name: :action_name, type: :hidden, value: :search_settings }

    = render partial: 'instance_admin/manage/search/common', locals: {f: f}

    %hr
    %h4= t('instance_admin.manage.search.date_pickers')

    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :show_date_pickers, as: :boolean, inline_label: true

        .input-col-clearfix
          = f.input :date_pickers_use_availability_rules, as: :boolean, inline_label: true

      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :date_pickers_mode, collection: %w(relative absolute), include_blank: false, input_html: { class: 'form-control' }

    = render partial: 'instance_admin/manage/search/custom_attributes', locals: {f: f}
