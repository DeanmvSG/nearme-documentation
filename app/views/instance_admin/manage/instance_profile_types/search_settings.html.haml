.content-container
  = simple_form_for resource, url: [:instance_admin, :manage, resource] do |f|
    %input{ name: :action_name, type: :hidden, value: :search_settings }

    %h4.control-label
      %b= t('instance_admin.manage.search.search_results')

    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :searchable, as: :boolean, inline_label: true
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :search_only_enabled_profiles, as: :boolean, inline_label: true

    %hr
    %h4= t('instance_admin.manage.search.category_tree_search')
    .row
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :show_categories, as: :boolean, inline_label: true
      .input-container.col-xs-6
        .input-col-clearfix
          = f.input :category_search_type, collection: %w(AND OR), include_blank: false,
              input_html: { class: 'form-control' }


    = content_for :header_buttons do
      = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }


    = render partial: 'instance_admin/manage/search/custom_attributes', locals: {f: f}
