.row
  .table-container.col-xs-12
    %table.table
      %thead
        %tr
          %th= t('instance_admin.manage.transfers.company')
          %th= t('instance_admin.manage.transfers.charges')
          %th= t('instance_admin.manage.transfers.created_at')
          %th= t('instance_admin.manage.transfers.transferred_at')
          - if current_instance.guest_fee_enabled? &&  current_instance.host_fee_enabled?
            %th= t('instance_admin.manage.transfers.lessor_service_fees')
            %th= t('instance_admin.manage.transfers.lessee_service_fees')
          %th= t('instance_admin.manage.transfers.total_fee')
          %th= t('instance_admin.manage.transfers.payment_gateway_fee')
          %th= t('instance_admin.manage.transfers.transfer_amount')

      - @payment_transfers.each do |resource|
        = render 'instance_admin/manage/transfers/payment_transfer', :resource => resource
