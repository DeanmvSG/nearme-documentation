.content-container
  .row
    .table-container.col-xs-12
      %table.table
        %tbody
          - collection.each do |resource|
            %tr
              %td= resource.name.humanize
              %td
                = link_to t('instance_admin.manage.offer_types.form_components'), [:instance_admin, :manage, resource, :form_components], class: 'pull-left btn btn-blue btn-bottom-margin'
                = link_to t('instance_admin.manage.offer_types.custom_attributes'), [:instance_admin, :manage, resource, :custom_attributes], class: 'pull-left btn btn-blue btn-bottom-margin'
              %td= link_to t('instance_admin.edit'), [:edit, :instance_admin, :manage, resource], class: 'pull-right'
              %td
                = link_to t('instance_admin.delete'), [:instance_admin, :manage, resource], method: :delete,
                    data: { confirm: t('instance_admin.are_you_sure') }, class: "pull-right"

  = content_for :header_buttons do
    = link_to t("instance_admin.manage.#{@translation_key}.new"), new_polymorphic_path([:instance_admin, :manage, resource_class]), class: 'pull-right btn btn-blue'

