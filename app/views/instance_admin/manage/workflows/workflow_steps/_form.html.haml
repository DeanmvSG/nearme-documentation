= simple_form_for [:instance_admin, :manage, @workflow, resource], :html => { :multipart => true, id: 'workflow_form'} do |f|
  .content-container
    .row
      .input-container.col-xs-6
        = f.input :name, required: true, input_html: { class: 'form-control' }

  = content_for :header_buttons do
    = f.button :submit, 'Save', class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }

