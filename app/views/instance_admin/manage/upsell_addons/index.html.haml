- if @additional_charges.blank?
  .content-container.blank-state-container
    .row
      .table-container.col-xs-12
        .text-center
          .question-icon !
          = t('instance_admin.manage.upsell_addons.no_addons_yet')
          %br
          = link_to t('instance_admin.manage.upsell_addons.add_new_upsell'), new_instance_admin_manage_upsell_addon_path
- else
  .content-container
    .row
      .table-container.col-xs-12
        %table.table
          %tbody
            %tr
              %td= t('instance_admin.manage.upsell_addons.name')
              %td= t('instance_admin.manage.upsell_addons.service')
              %td= t('instance_admin.manage.upsell_addons.amount')
              %td= t('instance_admin.manage.upsell_addons.status')
              %td= link_to t('instance_admin.manage.upsell_addons.add_upsell'), new_instance_admin_manage_upsell_addon_path
            - @additional_charges.each do |ac|
              = render partial: 'additional_charge', locals: { additional_charge: ac }
