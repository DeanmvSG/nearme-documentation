.nested-fields
  .row
    .input-container.col-xs-3
      = f.input :name, input_html: { class: 'form-control' }
    .input-container.col-xs-2
      = f.input :amount, input_html: { class: 'form-control' }
    .input-container.col-xs-2
      = f.input :currency, collection: Currency.all.map(&:full_name)
    .input-container.col-xs-3
      = f.input :charge_event, collection: ChargeType::CHARGE_EVENT.invert, include_blank: false
    .input-container.col-xs-2
      = link_to_remove_association I18n.t('remove', default: 'Remove'), f, class: 'btn btn-primary btn-margin-top'
