%h4 Manage Service Types

.content-container
  .row
    = link_to 'New Service Type', new_instance_admin_manage_transactable_type_path, class: 'pull-right btn btn-green'

.content-container
  .row
    .table-container.col-xs-12.dropshadow
      %table.table
        %tbody
          - @transactable_types.each do |resource|
            %tr
              %td= resource.name.humanize
              %td
                = link_to 'Form Components', instance_admin_manage_transactable_type_form_components_path(resource), class: 'pull-left btn btn-green btn-bottom-margin'
                = link_to 'Data Upload', instance_admin_manage_transactable_type_data_uploads_path(resource), class: 'pull-left btn btn-green btn-bottom-margin'
                = link_to 'Custom Attributes', instance_admin_manage_transactable_type_custom_attributes_path(resource), class: 'pull-left btn btn-green btn-bottom-margin'
                = link_to 'Categories', instance_admin_manage_transactable_type_categories_path(resource), class: 'pull-left btn btn-green btn-bottom-margin'

              %td= link_to 'Edit', edit_instance_admin_manage_transactable_type_path(resource), class: 'pull-right'
              %td
                = link_to "Delete", instance_admin_manage_transactable_type_path(resource), method: :delete,
                    data: { confirm: 'Are you sure you want to delete this transactable type?' }, class: "pull-right"

