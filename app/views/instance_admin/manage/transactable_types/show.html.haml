.row-fluid
  .controls.controls-row
    %legend.span3
      = resource.name
    = link_to 'Add Attr', new_instance_admin_manage_transactable_type_transactable_type_attribute_path(resource), class: 'pull-right btn btn-primary'
    = link_to 'Data Upload', instance_admin_manage_transactable_type_data_uploads_path(resource), class: 'pull-right btn btn-primary'

.row-fluid
  .controls.controls-row

%br

%table.table
  %tbody
    - resource.transactable_type_attributes.each do |tta|
      %tr
        %td= tta.name.humanize
        %td= link_to 'Edit', edit_instance_admin_manage_transactable_type_transactable_type_attribute_path(@transactable_type, tta), class: 'btn'
        %td= link_to "Delete", [:instance_admin, :manage, resource, tta], :method => :delete, :confirm => "Are you sure you want to delete this attribute?", :class => "btn btn-danger"
