= simple_form_for @sms_template, as: :sms_template, url: @sms_template.persisted? ? instance_admin_manage_sms_template_path(@sms_template) : instance_admin_manage_sms_templates_path, method: @sms_template.persisted? ? :put : :post do |f|
  .content-container
    .row
      .input-container.col-xs-12
        = f.input :path, label: 'Template Name', :placeholder => 'sms name', disabled: @sms_template.persisted? && WorkflowAlert.for_sms_path(@sms_template.path).count > 0, input_html: { class: 'form-control' }
    .row
      .input-container.col-xs-12
        = f.association :transactable_type, label: 'Service Type'
    .row
      .input-container.col-xs-12
        = f.input :body, as: :text, label: 'Body', input_html: { class: 'form-control editor', :"data-editor" => 'liquid', rows: '5' }, hint: 'We will automatically truncate messages to be no more than 160 characters'

    = content_for :header_buttons do
      = f.button :submit, 'Save', class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }
      = link_to 'Cancel', instance_admin_manage_sms_templates_url , class: 'btn btn-light pull-right'

