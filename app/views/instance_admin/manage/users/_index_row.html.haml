%tr
  %td= resource.name
  %td= resource.email
  %td= resource.created_at.strftime("%b %-d, %Y")
  %td
    = link_to t('instance_admin.manage.users.login_as'), login_as_instance_admin_manage_user_path(resource), :method => :post,
        data: { confirm: 'This will log you out and re-log you in as this user' }
  %td
    = link_to t('instance_admin.delete'), instance_admin_manage_user_user_bans_path(resource), :method => :post,
        data: { confirm:  'You will prohibit this user from logging in to your marketplace, do you want to continue?' }
