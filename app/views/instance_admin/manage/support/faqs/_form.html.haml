.support
  =simple_form_for [:instance_admin, :manage, @faq] do |f|
    .content-container.dropshadow
      .row
        .input-container.col-xs-12
          =f.input :question, required: false, placeholder: 'What is the title of the question?', :input_html => { class: 'form-control', :rows => 2 }
      .row
        .input-container.col-xs-12
          =f.input :answer, as: :text, required: false, placeholder: 'What is the answer?',  :input_html => { class: 'form-control', :cols => 5, :rows => 10 }
    .content-container
      =f.submit 'Save', class: 'btn btn-green pull-right'
