.support
  .row-fluid
    .controls.controls-row
      .left
        %legend= "#{@filter_name} tickets"
      .right
        %legend.filter
          = support_link_to_filter(@filter, 'open')
          = support_link_to_filter(@filter, 'resolved')
          = support_link_to_filter(@filter, 'all')

%br

%table.table
  %thead
    %tr
      %th Ticket
      %th Updated
      %th Created
      %th State

  %tbody
    = render partial: 'ticket', collection: @tickets

= will_paginate @tickets

- content_for :domready do
  $('abbr.timeago').timeago();
