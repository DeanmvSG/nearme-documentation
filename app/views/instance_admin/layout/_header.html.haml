.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to image_tag('instance_admin/logo.png'), instance_admin_url, :class => "brand"
      .nav-collapse.collapse.navbar-collapse
        %ul.nav
          - if @authorizer.authorized?('Analytics')
            %li{:class => ("active" if controller.class.to_s.deconstantize == 'InstanceAdmin::Analytics')}
              = link_to instance_admin_analytics_overview_path do
                .fa.fa-bar-chart-o.fa-lg
                Analytics
          - if @authorizer.authorized?('Settings')
            %li{:class => ("active" if controller.class.to_s.deconstantize == 'InstanceAdmin::Settings')}
              = link_to instance_admin_settings_configuration_path do
                .fa.fa-cog.fa-lg
                Settings
          - if @authorizer.authorized?('Theme')
            %li{:class => ("active" if controller.class.to_s.deconstantize == 'InstanceAdmin::Theme')}
              = link_to instance_admin_theme_info_path do
                .fa.fa-bolt.fa-lg
                Theme
          - if @authorizer.authorized?('Manage')
            %li{:class => ("active" if controller.class.to_s.deconstantize == 'InstanceAdmin::Manage')}
              = link_to instance_admin_manage_inventories_path do
                .fa.fa-briefcase.fa-lg
                Manage
          - if @authorizer.authorized?('Blog')
            %li{:class => ("active" if controller.class.to_s.deconstantize == 'InstanceAdmin::ManageBlog')}
              = link_to instance_admin_manage_blog_posts_path do
                .fa.fa-pencil-square-o.fa-lg
                Blog

        %ul.nav.user-menu.pull-right.dropdown
          %li.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            = link_to '/', title: "#{current_user.email}", rel: 'tooltip', :'data-original-title' => "#{current_user.email}", :'data-placement' => 'left'  do
              .email= current_user.email
              .fa.fa-caret-down.fa-lg
          %ul.dropdown-menu{"aria-labelledby" => "dLabel", role: "menu"}
            %li= link_to "Log Out", destroy_user_session_url, :method => :delete, :data => {:user => current_user.first_name }
