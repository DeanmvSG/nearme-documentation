= simple_form_for @instance, :url => form_url, :html => { :multipart => true, :autocomplete => 'off', :method => form_method } do |f|
  .content-container
    %h4 Shippo
    .row
      .input-container.col-xs-6
        = f.input :shippo_api_token, required: false, input_html: { class: 'form-control' }

  .content-container
    %h4 Sendle
    .row
      .input-container.col-xs-6
        = f.input :sendle_id, label: 'Sendle ID', required: false, input_html: { class: 'form-control' }
        = f.input :sendle_api_key, label: 'Sendle API Key', required: false, input_html: { class: 'form-control' }
    = content_for :header_buttons do
      = f.submit form_title, class: 'btn btn-blue', data: { 'submit-form' => 1, 'form-selector' => 'form' }
