.content-container
  %h4 Manage Spam
  .row
    .table-container.col-xs-12
      %table.table
        %tbody
          %tr
            %td Reported Object Class
            %td Reported Object Id
            %td Reported Object
            %td Reported by
            %td Reports Count

          - @spam_reports.each do |resource|
            - next if resource.spamable.nil?
            %tr
              %td= resource.spamable.class.name
              %td= resource.spamable.id
              %td= resource.spamable.event
              %td= resource.user.try(:name) || "Anonymous"
              %td= resource.spamable.spam_reports.count
              %td= link_to "Delete", instance_admin_projects_spam_report_path(resource), method: :delete, data: { confirm: "Are you sure you want to delete this #{resource.spamable.class.name}?", class: "pull-right" }
