.content-container
  %h4 Manage Project Types
  .row
    .table-container.col-xs-12
      %table.table
        %tbody
          - @project_types.each do |resource|
            %tr
              %td= resource.name.humanize
              %td
                = link_to 'Form Components', instance_admin_projects_project_type_form_components_path(resource), class: 'pull-left btn btn-blue  btn-bottom-margin'
                = link_to 'Custom Attributes', instance_admin_projects_project_type_custom_attributes_path(resource), class: 'pull-left btn btn-blue  btn-bottom-margin'
                = link_to 'Custom Validators', instance_admin_projects_project_type_custom_validators_path(resource), class: 'pull-left btn btn-blue btn-bottom-margin'
              %td= link_to 'Edit', edit_instance_admin_projects_project_type_path(resource), class: 'pull-right'
              %td= link_to "Delete", instance_admin_projects_project_type_path(resource), method: :delete, data: { confirm: "Are you sure you want to delete this project type?", class: "pull-right" }

= content_for :header_buttons do
  = link_to 'New Project Type', new_instance_admin_projects_project_type_path, class: 'pull-right btn btn-blue'

