.row
  .input-container.col-xs-6
    = f.input :enabled, inline_label: true

  .input-container.col-xs-6
    = f.input :allow_video_embeds, inline_label: true

.row
  = f.simple_fields_for :owner do |i|
    .input-container.col-xs-4
      = i.input :user_blogs_enabled, inline_label: true
    .input-container.col-xs-4
      = i.input :enquirer_blogs_enabled, inline_label: true
    .input-container.col-xs-4
      = i.input :lister_blogs_enabled, inline_label: true

.row
  .input-container.col-xs-6
    = f.input :name, input_html: { class: 'form-control' }
  .input-container.col-xs-6
    = f.input :header, input_html: { class: 'form-control' }

- if @blog_instance.header.present?
  .row
    .input-container.col-xs-12
      = link_to(@blog_instance.header.filename, @blog_instance.header.url)
      = link_to 'Delete', delete_image_instance_admin_manage_blog_settings_path(:image_type => :header), data: { confirm: t('confirmations.are_you_sure') }, method: :delete

.row
  .input-container.col-xs-12
    = f.input :facebook_app_id, input_html: { class: 'form-control' }

.row
  .input-container.col-xs-6
    = f.input :header_text, input_html: { class: 'form-control' }
  .input-container.col-xs-6
    = f.input :header_motto, input_html: { class: 'form-control' }

.row
  .input-container.col-xs-12
    = f.input :header_logo, input_html: { class: 'form-control' }

- if @blog_instance.header_logo.present?
  .row
    .input-container.col-xs-12
      = link_to(@blog_instance.header_logo.filename, @blog_instance.header_logo.url)
      = link_to 'Delete', delete_image_instance_admin_manage_blog_settings_path(:image_type => :header_logo), data: { confirm: t('confirmations.are_you_sure') }, method: :delete

.row
  .input-container.col-xs-12
    = f.input :header_icon, input_html: { class: 'form-control' }

= f.button :submit, "Hidden submit", class: 'hidden_form_element'

- if @blog_instance.header_icon.present?
  .row
    .input-container.col-xs-12
      = link_to(@blog_instance.header_icon.filename, @blog_instance.header_icon.url)
      = link_to t('instance_admin.delete'), delete_image_instance_admin_manage_blog_settings_path(:image_type => :header_icon), data: { confirm: t('confirmations.are_you_sure') }, method: :delete

= content_for :header_buttons do
  = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { disable_with: t('user_blog.labels.please_wait'), 'submit-form' => 1, 'form-selector' => 'form' }

