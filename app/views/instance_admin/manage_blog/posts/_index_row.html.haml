%tr
  %td= link_to blog_post.title, edit_instance_admin_manage_blog_post_path(blog_post)
  %td= l blog_post.created_at, format: :only_date
  %td= l(blog_post.published_at, format: :only_date) if blog_post.published_at
  %td
    .pull-right
      = link_to instance_admin_manage_blog_post_path(blog_post), :method => :delete, :confirm => "Are you sure you want to delete this?", :title => 'Delete' do
        .fa.fa-trash-o.fa-2x.inline-form-icon
    = link_to edit_instance_admin_manage_blog_post_path(blog_post), :title => 'Edit' do
      .fa.fa-pencil.fa-2x.inline-form-icon.pull-right
