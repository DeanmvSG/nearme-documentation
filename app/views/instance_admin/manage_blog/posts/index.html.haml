.row
  .col-xs-12
    %h4 Posts
    = link_to 'New post', new_instance_admin_manage_blog_post_path, class: 'pull-right btn btn-green'

%br

.content-container
  .row
    .table-container.col-xs-12.dropshadow
      %table.table.sortable
        %thead
          %tr
            %th Name
            %th Created at
            %th Published at
            %th
        %tbody
          - @blog_posts.each do |blog_post|
            = render 'index_row', blog_post: blog_post
