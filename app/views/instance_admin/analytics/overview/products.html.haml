.sub-header-nav
  %ul
    %li
      = link_to 'Services', instance_admin_analytics_overview_path
    %li
      = link_to 'Products', products_instance_admin_analytics_overview_path, class: 'active'

%h4 Revenue
.box
  - if @last_month_revenue.inject(0) { |sum, revenue| sum += revenue.total_amount.to_f; sum }.zero?
    %p.no_data No revenue yet.
  - else
    .chart
      %canvas#revenue_chart
%br
%br

%h4 Sales
.box
  - if @last_month_sales.inject(0) { |sum, order| sum += order.orders_count.to_f; sum }.zero?
    %p.no_data No sales yet.
  - else
    .chart
      %canvas#sales_chart
%br
%br

%h4 Products
.box
  - if @last_month_products.inject(0) { |sum, product| sum += product.products_count.to_f; sum }.zero?
    %p.no_data You haven't created any products.
  - else
    .chart
      %canvas#products_chart
%br
%br

- content_for :domready do
  new ChartWrapper.Line($('#revenue_chart'), #{@revenue_chart.values.to_json.html_safe}, #{@revenue_chart.labels.to_json.html_safe})
  new ChartWrapper.Line($('#sales_chart'), #{@sales_chart.values.to_json.html_safe}, #{@sales_chart.labels.to_json.html_safe})
  new ChartWrapper.Line($('#products_chart'), #{@products_chart.values.to_json.html_safe}, #{@products_chart.labels.to_json.html_safe})
