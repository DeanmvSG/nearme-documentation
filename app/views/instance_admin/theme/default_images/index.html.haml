.content-container
  %h4
    = t('instance_admin.theme.default_images.title')

  .row
    - if @default_images.present?
      .table-container.col-xs-12
        %table.table
          %thead
            %tr
              %th
                Uploader
              %th
                Version
              %th
                Actions
          %tbody
            - @default_images.each do |default_image|
              %tr
                %td= default_image.photo_uploader
                %td= default_image.photo_uploader_version
                %td
                  = link_to t('instance_admin.general.delete'), instance_admin_theme_default_image_path(default_image), method: :delete, data: { confirm: t('instance_admin.general.are_you_sure') }
    - else
      .text-container.col-xs-12
        = t('instance_admin.theme.default_images.no_default_images_created')

- content_for :header_buttons do
  = link_to t('general.new'), new_instance_admin_theme_default_image_path, class: 'pull-right btn btn-blue'

