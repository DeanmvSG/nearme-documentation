= simple_form_for @graph_query, as: :graph_query, url: @graph_query.persisted? ? instance_admin_theme_graph_query_path(@graph_query) : instance_admin_theme_graph_queries_path, method: @graph_query.persisted? ? :put : :post do |f|
  .content-container
    %h4
      = link_to 'Manage graph query', instance_admin_theme_graph_queries_url
      =  "> #{pretty_path(@graph_query.name)}" if @graph_query.name

    .row
      .input-container.col-xs-12
        = f.input :name, input_html: { class: 'form-control' }, placeholder: 'new_query'
    .row
      .input-container.col-xs-12
        = f.input :query_string, as: :text, input_html: { class: 'form-control graphiql-editor', rows: '30' }

  = content_for :header_buttons do
    = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }
    = link_to t('instance_admin.cancel'), instance_admin_theme_graph_queries_url , class: 'btn btn-light pull-right'
