= simple_form_for @theme, :url => instance_admin_theme_homepage_path, :html => { :multipart => true } do |f|
  .content-container
    %h4
      = t('instance_admin.homepage.homepage')
    .row
      .input-container.col-xs-12
        = f.input :homepage_content, input_html: { class: 'form-control', :"data-editor" => 'liquid', rows: "30" }
    .row
      .input-container.col-xs-12
        = f.input :homepage_css, input_html: { class: 'form-control', :"data-editor" => 'liquid', rows: "30" }
  = content_for :header_buttons do
    = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }
    = link_to t('instance_admin.versions'), { action: :versions }, class: 'btn btn-blue pull-right'

