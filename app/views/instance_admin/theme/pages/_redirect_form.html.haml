= simple_form_for [:instance_admin, :theme, resource], :html => { :multipart => true } do |f|
  %input{type: 'hidden', name: 'redirect', value: 'true'}
  .row
    .input-container.col-xs-12
      = f.input :path, input_html: { class: 'form-control' }
  .row
    .input-container.col-xs-6
      = f.input :redirect_url, input_html: { class: 'form-control' }
    .input-container.col-xs-6
      = f.input :open_in_new_window, input_html: { class: '' }, inline_label: true

  = content_for :header_buttons do
    = f.button :submit, "#{f.object.new_record? ? t('instance_admin.create') : t('instance_admin.update')} #{t('instance_admin.pages.redirect')}", class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }

