%legend Pages

= link_to 'Add page', new_instance_admin_theme_page_path, class: 'btn btn-primary pull-right'
= link_to 'Add redirect', new_instance_admin_theme_page_path(redirect: true), class: 'btn btn-primary pull-right'

%table#pages.table.sortable
  %thead
    %tr
      %th Name
      %th Path
      %th
  %tbody
    - platform_context.theme.pages.each_with_index do |page|
      = render 'index_row', page: page

- content_for :script do
  :javascript
    $(function() {
      new InstanceAdmin.PagesController($('table#pages'));
    });
