%tr
  %td= page.path
  %td
    - if page.redirect?
      = link_to page.redirect_url, page.redirect_url, target: '_blank'
    - else
      = link_to pages_path(page), pages_path(page), target: '_blank'
  %td
    .pull-right
      -if page.versions.many?
        = link_to instance_admin_theme_page_paper_trail_versions_path(page.id, parent_resource: 'pages'), title: 'Show previous versions' do
          .fa.fa-archive.fa-2x.inline-form-icon
      = link_to edit_instance_admin_theme_page_path(page.id) do
        .fa.fa-pencil.fa-2x.inline-form-icon
      = link_to instance_admin_theme_page_path(page.id), :method => :delete,
          data: { confirm: 'Are you sure you want to delete this?' } do
        .fa.fa-trash-o.fa-2x.inline-form-icon
