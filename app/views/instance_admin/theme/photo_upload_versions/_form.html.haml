= simple_form_for @photo_upload_version, url: [:instance_admin, :theme, @photo_upload_version], html: { multipart: true, form_method: form_method }, data: { 'photo-uploader-versions' => PhotoUploadVersion::PHOTO_UPLOADERS } do |f|
  .row
    .input-container.col-xs-6
      = f.input :photo_uploader, as: :select, collection: PhotoUploadVersion::PHOTO_UPLOADERS.keys, required: true, input_html: { class: 'form-control photo_uploader' }, include_blank: false
  .row
    .input-container.col-xs-6
      = f.input :version_name, as: :select, collection: [], required: true, input_html: { class: 'form-control uploader_versions', data: { selected: @photo_upload_version.version_name.presence } }
  .row
    .input-container.col-xs-6
      = f.input :apply_transform, as: :select, collection: PhotoUploadVersion::TRANSFORM_FUNCTIONS, required: true, input_html: { class: 'form-control' }, include_blank: false
  .row
    .input-container.col-xs-6
      = f.input :width, as: :integer, required: true, input_html: { class: 'form-control uploader_versions' }
  .row
    .input-container.col-xs-6
      = f.input :height, as: :integer, required: true, input_html: { class: 'form-control uploader_versions' }


  = content_for :header_buttons do
    = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }

