= simple_form_for @template, url: '/instance_admin/theme/footer' do |f|
  .content-container
    %h4
      = t('instance_admin.footer.footer')
    .row
      .input-container.col-xs-12
        = f.input :path, :as => :hidden
        = f.input :body, required: false, input_html: { class: 'form-control', :"data-editor" => 'liquid', rows: '30' }
        = f.input :locale, :as => :hidden
        = f.input :format, :as => :hidden
        = f.input :handler, :as => :hidden
        = f.input :partial, :as => :hidden

  = content_for :header_buttons do
    = f.button :submit, t('instance_admin.save'), class: 'btn btn-blue pull-right', data: { 'submit-form' => 1, 'form-selector' => 'form' }
    = link_to t('instance_admin.versions'), { action: :versions }, class: 'btn btn-blue pull-right'
