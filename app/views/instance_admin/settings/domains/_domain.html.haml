%tr
  %td= link_to_if domain.editable?, domain.name, edit_instance_admin_settings_domain_path(domain)
  %td= domain.state.to_s.humanize
  %td= domain.dns_name
  %td= domain.redirect_to
  %td= domain.use_as_default ? "Yes" : "No"
  %td
    .pull-right
      - if domain.deletable?
        = link_to instance_admin_settings_domain_path(domain), :method => :delete, :confirm => "Are you sure you want to delete this?", :title => 'Delete' do
          .fa.fa-trash-o.fa-2x.inline-form-icon
    - if domain.editable?
      = link_to edit_instance_admin_settings_domain_path(domain), :title => 'Edit' do
        .fa.fa-pencil.fa-2x.inline-form-icon.pull-right
