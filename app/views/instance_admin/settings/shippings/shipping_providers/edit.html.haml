.content-container
  %h4
    = t('instance_admin.settings.integrations.shipping_providers')
    = ':'
    = @view.resource.shipping_provider_name.humanize

  .row
    .input-container.col-xs-12
      = simple_form_for [:instance_admin, :settings, @view.resource] do |form|

        %h3 settings
        - if @view.resource.errors.any?
          .error.alert.col-xs-12
            - @view.resource.errors.full_messages.each do |error|
              = error

        = form.fields_for :settings, OpenStruct.new(@view.resource.settings) do |settings_form|
          - @view.provider.fields.each do |field|
            = settings_form.input field, as: :string, input_html: { class: 'form-control', required: false}

        = form.submit
        = link_to :back, [:instance_admin, :settings, :shippings, :shipping_providers]
