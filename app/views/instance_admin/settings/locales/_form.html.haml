.row
  .input-container.col-xs-4
    .input-col-clearfix
      = f.input :code, collection: languages, input_html: { class: 'form-control' }, include_blank: false,
          disabled: (!@locale.new_record?)

  .input-container.col-xs-4
    = f.input :custom_name, input_html: { class: 'form-control' }

  .input-container.col-xs-4
    = f.input :primary, input_html: { class: '' }, disabled: (@locale.primary), inline_label: true

.row
  .input-container.col-xs-12
    = f.button :submit, t('instance_admin.locales.buttons.save'), class: 'btn btn-blue pull-right'
