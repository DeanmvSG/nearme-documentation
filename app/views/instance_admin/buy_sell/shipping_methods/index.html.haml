.row
  .col-xs-12
    %h4 Shipping methods
    = link_to 'New shipping methods', new_instance_admin_buy_sell_shipping_method_path, class: 'pull-right btn btn-green'

%br

.content-container
  .row
    .table-container.col-xs-12.dropshadow
      %table.table.sortable
        %thead
          %tr
            %th Name
            %th Shipping categories
            %th Zones
            %th Tax category
            %th Price
            %th
        %tbody
          - @shipping_methods.each do |shipping_method|
            = render 'index_row', shipping_method: shipping_method
