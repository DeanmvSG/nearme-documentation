.content-container
  %h4= t('instance_admin.buy_sell.zones.zones')
  .row
    .table-container.col-xs-12
      %table.table.sortable
        %thead
          %tr
            %th= t('instance_admin.buy_sell.zones.name')
            %th= t('instance_admin.buy_sell.zones.description')
            %th= t('instance_admin.buy_sell.zones.default_tax_zone')
            %th
        %tbody
          - @zones.each do |zone|
            = render 'index_row', zone: zone

= content_for :header_buttons do
  = link_to t('instance_admin.buy_sell.zones.new_zone'), new_instance_admin_buy_sell_zone_path, class: 'pull-right btn btn-blue'

