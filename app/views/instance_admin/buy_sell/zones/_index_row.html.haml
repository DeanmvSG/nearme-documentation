%tr
  %td= link_to zone.name, edit_instance_admin_buy_sell_zone_path(zone)
  %td= zone.description
  %td= zone.default_tax? ? 'Yes' : 'No'
  %td
    .pull-right
      = link_to instance_admin_buy_sell_zone_path(zone), method: :delete, confirm: "Are you sure you want to delete this?", title: 'Delete' do
        .fa.fa-trash-o.fa-2x.inline-form-icon
    = link_to edit_instance_admin_buy_sell_zone_path(zone), title: 'Edit' do
      .fa.fa-pencil.fa-2x.inline-form-icon.pull-right
