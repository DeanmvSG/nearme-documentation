.row
  .col-xs-12
    %h4 Tax categories
    = link_to 'New tax category', new_instance_admin_buy_sell_tax_category_path, class: 'pull-right btn btn-green'

%br

.content-container
  .row
    .table-container.col-xs-12.dropshadow
      %table.table.sortable
        %thead
          %tr
            %th Name
            %th Description
            %th Default
            %th
        %tbody
          - @tax_categories.each do |tax_category|
            = render 'index_row', tax_category: tax_category
