%tr
  %td= link_to tax_category.name, edit_instance_admin_buy_sell_tax_category_path(tax_category)
  %td= tax_category.description
  %td= tax_category.is_default? ? 'Yes' : 'No'
  %td
    .pull-right
      = link_to instance_admin_buy_sell_tax_category_path(tax_category), method: :delete,
          data: { confirm: 'Are you sure you want to delete this?' }, title: 'Delete' do
        .fa.fa-trash-o.fa-2x.inline-form-icon

    = link_to edit_instance_admin_buy_sell_tax_category_path(tax_category), title: 'Edit' do
      .fa.fa-pencil.fa-2x.inline-form-icon.pull-right
