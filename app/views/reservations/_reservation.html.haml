.row-fluid
  .span12.reservation-details{id: dom_id(reservation)}
    .span12.reservation-text-information
      .reservation-status
        .icon-container
          = reservation.my_booking_status_info
      .span12.reservation-information
        %div{:class => reservation.archived? ? 'span6' : 'span5'}
          - if reservation.listing.present?
            = link_to reservation.listing.try(:name), location_path(reservation.listing.location, reservation.listing)
            %br
            %span.address= link_to reservation.listing.location.address, "http://maps.apple.com/?q=#{reservation.listing.location.address}", target: '_blank'
          - else
            [listing deleted]
        .span2
          = reservation.total_price
          %br
          %span= reservation.state.capitalize.humanize
        %div{:class => reservation.archived? ? 'span3' : 'span2'}
          - if reservation.periods.first.read_attribute(:start_minute).present?
            - reservation_period = reservation.periods.first.decorate
            %a.dates{href: '#', 'data-reservation-hours' => reservation_period.hourly_summary(true)}
              = reservation.short_dates
          - else
            %a.dates{href: '#', data: { :dates => reservation.dates_to_array } }
              = reservation.short_dates
          .clearfix
          %span
            - if reservation.confirmed?
              = link_to export_reservation_path(reservation, :format => :ics) do
                %span.ical Add to iCal
                %span.ico-download.ical
        .span1
          = reservation.quantity
          %span.ico-user
        - unless reservation.archived?
          .span2
            .actions
              = render :partial => "dashboard/user_actions",  :locals => {:reservation => reservation} if current_user == reservation.owner

- content_for :domready do
  new Reservation.UserReservationController($("##{dom_id(reservation)}"))

