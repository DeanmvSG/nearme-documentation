- content_for :hero do
  %header#listing_search.container-fluid.products_table{class: result_view == 'map' ? 'with-map' : ''}
    .header-inner
      %form.search_results{:action => search_path(v: result_view), :method => "get"}
        = hidden_field_tag :v, result_view
        = hidden_field_tag :ignore_search_event, 0
        = hidden_field_tag :page, 1
        = hidden_field_tag :transactable_type_id, @transactable_type.id
        = hidden_field_tag :buyable, true
        .row-fluid
          .span12
            .search-container.span10
              %input#search{:name => "query", :placeholder => platform_context.search_field_placeholder, :type => "text", :value => @searcher.query, :class => "query", :autocomplete => "off"}
            .search-icon.btn.btn-green.span2
              %span.ico-search

