.listing.box.divider.small{listing_data_attributes(listing)}
  .images
    - if listing.photos.any?
      .image{:style => "margin-right: 15px;"}
        = image_tag listing.photos.first.url(:space_listing)

  %h3.listing-name
    = listing.name
  %p.listing-description
    = listing.description

  .make-reservation
    .quantity
      = select_tag :quantity, options_for_select(1..listing.quantity), :class => 'quantity'
    %span.resource desk
    on
    .calendar
      = text_field_tag "dates", nil, :autocomplete => "off"
      %span.total-days 1 day

    for
    %span #{currency_content_tag(listing.currency)}

    .book
      = link_to "Book", "", :class => "btn btn-green btn-medium", :'data-behavior' => 'showReviewBookingListing', :'data-listing-id' => listing.id

  .clearfix
