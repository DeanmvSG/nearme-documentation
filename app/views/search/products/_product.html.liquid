{% cache_for product, product.company %}
  <div class="span4 result-item" data-product-id="{{product.id}}">
    <a class="item" href="{{product.url}}">
      <div class="item-img"><img src="{{product.photo_url}}" alt="{{ product.name }}" title="{{ product.name }}" /></div>
      <div class="details clearfix">
        <p>{{ product.name }}</p>
        <p class="name">{{ product.company.name }}</p>
        <p class="price">{{ product.display_price }}</p>
      </div>
    </a>
  </div>
{% endcache_for %}