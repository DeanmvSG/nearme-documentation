- no_footer!
- content_for :hero do
  = render 'search/products_table/header'
.search-view
  .crumbs= render_crumbs
  .page-wrapper.row-fluid
    = render partial: 'search/categories', locals: { container_class: 'span2' }
    = yield :category_tree

    .span10
      - if platform_context.instance.price_slider
        = render partial: 'search/shared/product_table_slider'
    .search-max-price{:'data-max-price' => @searcher.max_price, :'data-min-price' => @searcher.min_price}
    - if @searcher.results.any?
      %section#results.products_table{class: platform_context.display_taxonomy_tree? ? "span10" : "span12"}
        %table
          = render partial: 'search/products_table/head'
          = render partial: 'search/products_table/product', collection: @searcher.results
        = will_paginate @searcher.results
    - else
      %section#results.no_results{class: platform_context.display_taxonomy_tree? ? "span10" : "span12"}
        .text-center
          %br/
          %br/
          %h1.tk-adelle.fat= t 'buy_sell_market.products.search_results.no_results'
    = render 'shared/loading_spinner'
- content_for :domready do
  new Search.ProductsTableSearchController($('form.search_results'), $('.search-view'))


