%header#listing_search.products_list{class: platform_context.display_taxonomy_tree? ? "span8 with_taxons" : "span10 no_taxons"}
  .header-inner
    %form.search_results{:action => search_path(v: result_view), :method => "get"}
      -unless platform_context.fulltext_search?
        - search_geofields.each do |geofield|
          = hidden_field_tag geofield, ''
      = hidden_field_tag :v, result_view
      = hidden_field_tag :transactable_type_id, @transactable_type.id
      = hidden_field_tag :ignore_search_event, 0
      = hidden_field_tag :category_ids, (@searcher.category_ids.presence || []).join(',')
      = hidden_field_tag :page, 1
      = hidden_field_tag :buyable, params[:buyable]
      = hidden_field_tag 'price[min]', @searcher.min_price
      = hidden_field_tag 'price[max]', @searcher.max_price
      .row-fluid
        .geolocation-input.span11
          %input#search.query{:name => 'query', :placeholder => platform_context.search_field_placeholder, :type => "text", :value => @searcher.query, :autocomplete => "off", 'data-disable-autocomplete' => true}
        .span1
          .search-icon.btn.btn-green
            %span.ico-search
              %span.text= t 'homepage.buttons.search'

        