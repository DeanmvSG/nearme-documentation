.row-fluid.listing{ data: { id: listing.id, name: listing.name, latitude: listing.latitude, longitude: listing.longitude, location: listing.location_id } }
  .span2
    .photo
      - if listing.photos_count > 0 && photo = listing.photos.first
        = image_tag photo.image_url(:medium), :title => listing.name, :alt => listing.name
      - else
        = image_tag space_listing_placeholder_path( :width => 144, :height => 89 ), :title => listing.name, :alt => listing.name
  .listing-name-description{class: listing.capacity.blank? ? 'span6' : 'span4'}
    %span.bold= "#{listing.name} (#{listing.quantity})"
    %p= truncate_with_ellipsis listing.description, 250
  - if not listing.capacity.blank?
    .span2.padding-top
      %span.bold= listing.capacity
      seats
  .span2.listing-price.padding-top
    = listing_price_information(listing)
  .span2.reserve-listing.padding-top
    = link_to 'reserve', location_listing_path(location, listing), class: "btn btn-green btn-small"
