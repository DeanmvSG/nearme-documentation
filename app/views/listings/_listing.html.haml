%article.listing{:'data-id' => listing.id, :'data-name' => listing.name, :'data-latitude' => listing.latitude, :'data-longitude' => listing.longitude}
  .details.clearfix
    .two.columns.alpha
      = link_to image_tag(listing.photos.thumb.url, :title => listing.name, :alt => listing.name), listing
    .five.columns
      %h2= link_to "#{listing.name} - #{listing_price(listing)}", listing
      %address= listing.formatted_address || listing.address
    .nine.columns.omega
      = render :partial => "listings/availability", :locals => {:listing => listing, :weeks => 1}
  .map-details{:style => "display: none"}
    = render 'listings/gmap', :listing => listing
