- resource = f.object

.phone_fields
  %hr.divider

  - if resource.errors[:contact_info].present?
    .flash.error
      %ul
        - resource.errors[:contact_info].each do |e|
          %li= e

  .row-fluid
    = f.label :country_name, "Country", class: 'control-label', placeholder: 'Credit Card Number'
    .controls.country-name
      = f.input :country_name, :label => false, :as => :select, :collection => user_country_name_options, :input_html => { :class => "custom-select" }

  .phone-number.column.left
    = f.label :phone, :class => 'control-label' do
      Phone number

    .controls
      .phone-number-country-code-field
        .country-calling-code
          = "+#{resource.country.calling_code}" if resource.country
        = f.text_field :phone

  .mobile-number-field.column.right
    = f.label :mobile_number
    .controls
      .phone-number-country-code-field
        .country-calling-code
          = "+#{resource.country.calling_code}" if resource.country
        = f.text_field :mobile_number

      = label_tag do
        = check_box_tag "#{resource.class.name.underscore}_mobile_same_as_phone", '1', (resource.phone == resource.mobile_number)
        = "Same as phone"

