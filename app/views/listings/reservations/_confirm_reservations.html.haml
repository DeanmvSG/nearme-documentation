- if @reservation_request.confirm_reservations?
  %p.confirm-reservations
    = t('reservations.manually_confirm', lessor: platform_context.lessor)
    - if @reservation_request.nonce_payment_available?
      = t('reservations.paypal_and_cc_charge_after_confirmation')
    - else
      = t('reservations.charge_after_confirmation')
    %br
    - if platform_context.instance.transactable_types.first.cancellation_policy_hours_for_cancellation.zero?
      = t('reservations.no_cancellation_time')
    - else
      = t('reservations.cancellation_time', time: platform_context.instance.transactable_types.first.cancellation_policy_hours_for_cancellation)
    - if platform_context.instance.transactable_types.first.cancellation_policy_penalty_percentage.zero?
      = t('reservations.no_cancellation_fee')
    - else
      = t('reservations.cancellation_fee', fee: platform_context.instance.transactable_types.first.cancellation_policy_penalty_percentage)
