- if f.object.confirm_reservations?
  %p.confirm-reservations
    = t('reservations.manually_confirm', lessor: platform_context.lessor)
    - if f.object.nonce_payment?
      = t('reservations.paypal_and_cc_charge_after_confirmation')
    - else
      = t('reservations.charge_after_confirmation')
    %br
    - if f.object.listing.transactable_type.cancellation_policy_hours_for_cancellation.zero?
      = t('reservations.no_cancellation_time')
    - else
      = t('reservations.cancellation_time', time: f.object.listing.transactable_type.cancellation_policy_hours_for_cancellation)
    - if f.object.listing.transactable_type.cancellation_policy_penalty_percentage.zero?
      = t('reservations.no_cancellation_fee')
    - else
      = t('reservations.cancellation_fee', fee: f.object.listing.transactable_type.cancellation_policy_penalty_percentage)
