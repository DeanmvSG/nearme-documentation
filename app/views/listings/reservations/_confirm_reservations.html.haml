- if @reservation_request && @reservation_request.confirm_reservations?
  %p.confirm-reservations
    = t('reservations.manually_confirm', lessor: platform_context.lessor)
    - if @reservation_request.payment.nonce_payment?
      = t('reservations.paypal_and_cc_charge_after_confirmation')
    - else
      = t('reservations.charge_after_confirmation')
    %br
    - if @reservation_request.listing.transactable_type.cancellation_policy_hours_for_cancellation.zero?
      = t('reservations.no_cancellation_time')
    - else
      %span.cancellation-time
        = t('reservations.cancellation_time', time: @reservation_request.listing.transactable_type.cancellation_policy_hours_for_cancellation)
    - if @reservation_request.listing.transactable_type.cancellation_policy_penalty_percentage.zero?
      = t('reservations.no_cancellation_fee')
    - else
      %span.cancellation-fee
        = t('reservations.cancellation_fee', fee: @reservation_request.listing.transactable_type.cancellation_policy_penalty_percentage)
