= render :partial => 'shared/og_meta', :locals => { :listing => listing }
%div{class: section_class}
  %header
    %h2
      %span.padding Your booking was Successful!

  .icons
    %h3 Share your travel plans
    %ul.no-bullets
      - url = location_listing_url(@listing.location, @listing)
      - text = "I just made a booking at #{@listing.name}"
      %li= share_to_facebook(url, 'facebook-full')
      %li= share_to_twitter(url, text)
      %li= share_to_linkedin(url, text)

  .buttons
    = link_to "Add to Calendar", export_reservation_path(@reservation_request.reservation, :format => :ics), class: "btn btn-large btn-white"
    = link_to "Manage Booking", upcoming_reservations_path(id: @reservation_request.reservation.id), class: "btn btn-large btn-green"

:javascript
  $(function() {
    $('.modal-close').hide()
  });

