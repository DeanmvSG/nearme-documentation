- legacy false
- title "Sign In"

.row-fluid
  #signup
    .span8.offset2
      .box
        %h2 Log in to Desks Near Me

        - if request.xhr?
          = render 'shared/render_flash'

        = render 'authentications/services'

        .hr.divider
          %span Or

  
        = simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
          .email-holder.input-icon-holder
            = f.input :email, :label => false, :placeholder => "Email", :tabindex => '1'
            %span.ico-mail
          .password-holder.input-icon-holder
            = f.input :password, :label => false, :placeholder => "Password", :tabindex => '2'
            %span.ico-lock

          %div.pnotice
            =raw "Forgot? #{link_to('Reset your password', new_user_password_url)}"

          .actions
            = f.submit "Log In", :tabindex => '3'

        .text-center.already-a-user= link_to('New User?', new_user_registration_path(:return_to => params[:return_to]), :rel => "modal.sign-up-modal")      
  
- if request.xhr?
  :javascript
    Modal.setClass('sign-up-modal')

:javascript
  $(function() {
    new SigninForm($('#signup'))
  });
