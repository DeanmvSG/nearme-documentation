- legacy false
- title "Sign In"

.row-fluid
  #signup
    .span8.offset2
      .box
        %header
          %h2
            Log in to
            = platform_context.name

        - if request.xhr?
          = render 'shared/render_flash'

        = render 'authentications/services'

        = simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
          .email-holder.input-icon-holder
            = f.input :email, :label => false, :placeholder => "Email", :input_html => { :tabindex => '1' }
            %span.ico-mail
          .password-holder.input-icon-holder
            = f.input :password, :label => false, :placeholder => "Password", :input_html => { :tabindex => '2' }
            %span.ico-lock

          %div.pnotice
            =raw "Forgot? #{link_to('Reset your password', new_user_password_url(return_to: params[:return_to]), :rel => 'modal.sign-up-modal')}"

          .actions
            = f.submit "Log In", :tabindex => '3'

        .text-center.already-a-user= link_to('New User?', new_user_registration_path(:return_to => params[:return_to]), :rel => "modal.sign-up-modal")

- if request.xhr?
  :javascript
    Modal.setClass('sign-up-modal')
    $(function() { new SigninForm($('#signup')) });
