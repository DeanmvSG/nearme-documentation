%span#service_buttons
  = link_to provider_auth_url('facebook'), :disable_with => "Connecting...", :class => "btn btn-blue btn-large facebook submit", :id => 'facebook' do
    %i.icon.icon-facebook
    Connect 
  = link_to provider_auth_url('linkedin'), :disable_with => "Connecting...", :class => "btn btn-blue btn-large linkedin submit", :id => 'linkedin' do
    %i.icon.icon-linkedin
    Connect
  = link_to provider_auth_url('twitter'), :disable_with => "Connecting...", :class => "btn btn-blue btn-large twitter submit", :id => 'twitter' do
    %i.icon.ico-twitter.padding
    Connect
