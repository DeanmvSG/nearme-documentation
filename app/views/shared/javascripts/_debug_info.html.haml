- if platform_context.debugging_mode_for_admins? && current_user.try(:instance_admin?)
  = javascript_include_tag 'https://d2rw3as29v290b.cloudfront.net/instances/1/uploads/ckeditor/attachment_file/data/3308/debug-info.js', defer: true

- if !Rails.env.production?
  :css
    #env-info { position: fixed; z-index: 1337; bottom: 0; left: 0; width: 100%; height: 35px; line-height: 35px; display: block; background-color: #f00; text-align: center; text-transform: uppercase; }
    #env-info marquee { width: 45%; margin: 0 auto; color: #fff; font-weight: bold; font-size: 16px; text-decoration: underline !important; }

  #env-info
    / Welcome back in 1999!
    %marquee{ scrollamount: 10, behavior: 'alternate' }= "#{Rails.env} - #{Rails.env} - #{Rails.env}"
