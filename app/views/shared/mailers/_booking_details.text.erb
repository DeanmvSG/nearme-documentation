BOOKING DETAILS --------

<%= "Listing: '#{listing.name}' at #{listing.location.name} (#{location_url(listing.location)}).\r\n\r\n" -%>
<%= "Guest instructions: #{listing.location.special_notes.strip}\r\n\r\n" if listing.location.special_notes && !listing.location.special_notes.strip.empty? -%>
<%= "Quantity: #{reservation.quantity}\r\n\r\n" -%>
<% if listing.hourly_reservations? -%>
<%= "Dates: #{hourly_summary_for_period(reservation.periods.first)}\r\n\r\n" -%>
<% else -%>
<%= "Dates: \n\n#{selected_dates_summary(reservation)}\r\n\r\n" -%>
<% end -%>


<%= "Host: #{listing.creator.name} (#{listing.creator.email})\r\n\r\n" -%>
<%= "Contact: #{listing.location.phone}\r\n\r\n" if listing.location.phone.present? -%>
<%= "Subtotal: #{reservation_subtotal_price(reservation)}\r\n\r\n" -%>
<%= "Service fee: #{reservation_service_fee(reservation)}\r\n\r\n" -%>
<%= "Total: #{reservation_total_price(reservation)}\r\n\r\n" -%>
<% if reservation.credit_card_payment? -%>
<%= "Paid: #{reservation_paid(reservation)}\r\n\r\n" -%>
<%= "Balance: #{reservation_balance(reservation)}\r\n\r\n" -%>
<%= "This reservation is currently pending confirmation, and will be charged when confirmed.\r\n\r\n" if reservation.pending? -%>
<% end -%>
