{% assign delete_path = 'api_wish_list_item_path' | generate_url: id: object.id, wishlistable_type: object.class_name %}
{% assign create_path = 'api_wish_list_items_path' | generate_url: id: object.id, wishlistable_type: object.class_name %}
{% assign index_path = 'api_wish_list_items_path' | generate_url %}

{% if current_user == blank %}
  <div class="favorite favorite-toggler">
    <a href="{{ 'new_user_session_path' | generate_url }}" class="{{ link_to_classes }}">
      <div class="icon {{ platform_context.wish_lists_icon_set }}"></div>
      <span>{{ 'wish_lists.buttons.unselected_state' | t }}</span>
    </a>
  </div>
{% else %}
  <div
    data-add-favorite-button
    data-path-create="{{ create_path }}"
    data-path-delete="{{ delete_path }}"
    data-wishlistable-type="{{ object.class_name }}"
    data-path-load="{{ index_path }}"
    data-object-id="{{ object.id }}"
    id="favorite-button-{{ object.class_name }}-{{ object.id }}"
    data-state="false">
    <div class="favorite favorite-toggler">
      <a href="{{ create_path }}" data-action-link class="{{ link_to_classes }}">
        <div data-favorite-icon class="icon {{ platform_context.wish_lists_icon_set }}"></div>
        <span data-text data-active-state="{{ 'wish_lists.buttons.selected_state' | t}}" data-inactive-state="{{ 'wish_lists.buttons.unselected_state' | t }}">{{ 'wish_lists.buttons.unselected_state' | t }}</span>
      </a>
    </div>
  </div>
{% endif %}
