{% assign stars_count_rounded = stars_count | round %}
{% assign max_rating_rounded = max_rating | round %}

<span class='star-container' title="{{stars_count}} out of {{max_rating}} stars rating">
  {% for i in (1..stars_count_rounded) %}
    <img src='{{ "raty/star-on.png" | image_url }}' aria-hidden>
  {% endfor %}
  {% for i in (1..max_rating_rounded) offset: stars_count_rounded %}
    <img src='{{ "raty/star-off.png" | image_url }}' aria-hidden>
  {% endfor %}
</span>

{% if count != blank %}
  <a>{{count}})</a>
{% endif %}
