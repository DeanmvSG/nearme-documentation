$(".favorite#favorite-<%= dom_id(@item) %> [data-favorite-icon]").addClass('selected');
$(".favorite#favorite-<%= dom_id(@item) %> [data-text]").html("<%= t('wish_lists.buttons.selected_state') %>");
$(".favorite#favorite-<%= dom_id(@item) %> [data-action-link]").attr('href', "<%= wish_list_path(id: @item.id, wishlistable_type: @item.class.name, method: :delete).html_safe %>");
$(".favorite#favorite-<%= dom_id(@item) %> [data-action-link]").data('method', "delete");
