= simple_form_for @order, url: wizard_path do |f|
  .row-fluid
    .span12.box
      %h1= t('buy_sell_market.checkout.labels.delivery')

    = f.fields_for :shipments do |ship_form|
      .shipment
        %h3.stock-location
          - Spree.t(:package_from)
          %strong.stock-location-name= ship_form.object.stock_location.name

        %table.stock-contents
          %colgroup
            %col{style: "width: 10%;"}
            %col{style: "width: 60%;"}
            %col{style: "width: 10%;"}
            %col{style: "width: 20%;"}

          %thead
            %th
            %th{align: 'left'}= Spree.t(:item)
            %th= Spree.t(:qty)
            %th= Spree.t(:price)

          %tbody>
            - ship_form.object.manifest.each do |item|
              %tr.stock-item
                %td.item-image= item.line_item.decorate.image('_blank')
                %td.item-name= item.variant.name
                %td.item-qty= item.quantity
                %td.item-price= item.line_item.decorate.price

        %h5.stock-shipping-method-title= Spree.t(:shipping_method)
        %ul.field.radios.shipping-methods
          - ship_form.object.shipping_rates.each do |rate|
            - rate
            %li.shipping-method
              %label
                = ship_form.radio_button :selected_shipping_rate_id, rate.id
                %span.rate-name= rate.name
                %span.rate-cost= rate.display_cost

        - if @differentiator.try(:missing?)
          .shipment.unshippable
            %h3.stock-location= Spree.t(:unshippable_items)
            %table.stock-contents
              %col{style: "width: 10%;"}
              %col{style: "width: 60%;"}
              %col{style: "width: 10%;"}
              %col{style: "width: 20%;"}

              %thead
                %th
                %th{align: 'left'}= Spree.t(:item)
                %th= Spree.t(:qty)
                %th= Spree.t(:price)

              %tbody
                - @differentiator.missing.each do |variant, quantity|
                  %tr.stock-item
                    %td.item-image= mini_image(variant)
                    %td.item-name= variant.name
                    %td.item-qty= quantity
                    %td.item-price= display_price(variant)

  = render partial: 'checkout_buttons', locals: { form: f }
