<div class="item span3">
	<div class="item-image">
		<img src="{{ item.photo_url }}" />
	</div>
	<span class="item-title">{{ item.name }}</span>
	{% if item.name.size < 200 %}
		<span class="item-description">{{ item.sanitized_product_description | truncate:200 }}</span>
	{% endif %}

	<span class="item-price">{{ item.display_price }}</span>

	<a href="{{ item.product_path }}" class="btn btn-blue">
		{{ "featured_items.view_item" | translate: item_type_name: item.transactable_type.name }}
	</a>
</div>
