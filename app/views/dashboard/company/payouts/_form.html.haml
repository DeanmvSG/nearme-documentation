= f.input :mailing_address, placeholder: t('simple_form.hints.company.mailing_address'), hint: false

%h3.with-margin Payouts via Paypal
= f.input :paypal_email, placeholder: t('simple_form.hints.company.paypal_email'), hint: false

- if platform_context.supported_payout_via_ach?
  %h3.with-margin Payouts via ACH (US only)
  - account_entered = f.object.instance_clients.first.try(:encrypted_balanced_user_id)

  - if account_entered
    %div
      %p
        Update bank account details for ACH payouts

  - if f.object.errors[:bank_account_form].present?
    .bank_account_fields
      .flash.error
        %ul
          - f.object.errors[:bank_account_form].each do |e|
            %li= e

          %li Unfortunately we could not process the credentials you have entered.

  = f.input :bank_owner_name, placeholder: account_entered ? '●●●●●●●●● ●●●●●●●●●' : ''
  = f.input :bank_routing_number, placeholder: account_entered ? '●●●●●●●●●' : ''
  = f.input :bank_account_number, placeholder: account_entered ? '●●●●●●●●●' : ''
