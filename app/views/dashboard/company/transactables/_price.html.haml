- if f.object.transactable_type.schedule_booking_enabled?
  - content_for :booking_type_schedule_tab_content do
    %div{:class => "control-group #{"error" if f.object.errors.include?(:fixed_price).present?}"}
      = f.label :daily_price, :price, :class => 'control-label flush-top' do
        %abbr{:title => "required"}= t('simple_form.required.mark')
        =t('simple_form.labels.listings.price')
      .controls
        = render 'dashboard/company/transactables/price_field', :f => f, :price => 'fixed', :label => t("simple_form.labels.transactable.price.fixed"), :include_checkbox => false
- if f.object.transactable_type.regular_booking_enabled?
  - content_for :booking_type_regular_tab_content do
    %div{:class => "control-group #{"error" if f.object.errors.include?(:free).present?}"}
      = f.label :daily_price, :price, :class => 'control-label flush-top' do
        %abbr{:title => "required"}= t('simple_form.required.mark')
        =t('simple_form.labels.listings.price')

      .controls
        - if f.object.transactable_type.action_daily_booking || f.object.transactable_type.action_weekly_booking || f.object.transactable_type.action_monthly_booking
          %div.price-inputs-daily
            %label.checkbox
              = f.check_box :action_daily_booking
              = f.object.transactable_type.daily_options_names.map {|p| t("simple_form.labels.transactable.price_#{p}")}.to_sentence(last_word_connector: " #{t('form.or')} ", two_words_connector: " #{t('form.or')} ")

            .price-input-options
              .price-inputs-wrapper.left
                - f.object.transactable_type.daily_options_names.each do |price|
                  = render 'dashboard/company/transactables/price_field', :f => f, :price => price, :label => t("simple_form.labels.transactable.price.#{price}"), :include_checkbox => true

        - if f.object.transactable_type.action_hourly_booking
          %div.price-inputs-hourly{'data-hourly-price' => true}
            %label.checkbox
              = f.check_box :action_hourly_booking
              = t("simple_form.labels.transactable.price_hourly")

            .price-input-options
              .price-inputs-wrapper.left
                = render 'dashboard/company/transactables/price_field', :f => f, :price => :hourly, :label => t("simple_form.labels.transactable.price.hourly")

        - if f.object.errors.include?(:action_hourly_booking).present?
          %p.error-block= f.object.errors[:action_hourly_booking].first

        - if f.object.transactable_type.action_free_booking
          %div.price-inputs-free
            %label.checkbox
              = f.check_box :action_free_booking
              = t("simple_form.labels.transactable.price_free")

        - if f.object.errors.include?(:price_type).present?
          %p.error-block= f.object.errors[:price_type].first

        - if f.object.errors.include?(:free).present?
          %p.error-block
            = t('errors.messages.free_if_zero')
