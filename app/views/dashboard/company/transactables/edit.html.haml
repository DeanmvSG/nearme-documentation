.dash-page
  .dash-head.clearfix
    = link_to t('dashboard.transactables.manage'), dashboard_company_transactable_type_transactables_path(@transactable_type)
    &gt;
    %p= t('dashboard.items.edit_item')
  .dash-body
    = simple_nested_form_for @transactable, wrapper: :bs3, :url => dashboard_company_transactable_type_transactable_path(@transactable_type, @transactable), :html => { :multipart => true,  method: :put, id: 'listing-form' } do |f|
      = render 'form', f: f

      .submit-bar
        = link_to dashboard_company_transactable_type_transactables_path(@transactable_type) do
          .btn.gray=t('general.cancel')
        = f.submit t('general.save'), class: "btn medium blue"
