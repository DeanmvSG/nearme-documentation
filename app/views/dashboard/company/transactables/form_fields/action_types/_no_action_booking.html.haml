- if f.object.transactable_type_action_type.allow_action_rfq? && form_fields.map(&:values).flatten.include?('action_rfq')
  = f.input :action_rfq, as: :switch
- elsif f.object.allow_no_action?
  = f.hidden_field :no_action, value: true
- elsif f.object.allow_action_rfq?
  = f.hidden_field :action_rfq, value: true
