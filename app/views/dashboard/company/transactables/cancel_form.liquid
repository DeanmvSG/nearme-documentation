<header class='dialog__header'>
  <h2 id='dialog__title'>{{ 'dashboard.transactables.actions.cancel' | translate }}</h2>
</header>

</div>
<div>
  Are you sure you want to cancel this booking?
</div>
{% assign offer = transactable.accepted_orders | first %}
{% if offer.confirmed? %}
  Cancellations within a 7-day period of your Booking date will not be refunded.
{% endif %}

{% assign url = 'cancel_dashboard_company_transactable_path' | generate_url: transactable %}
{% form_for @transactable, as: :transactable, url: @url, form_for_type: dashboard, method: 'post' %}
  <div class='dialog__actions'>
    {% assign submit_label = 'dashboard.transactables.cancel' | translate %}
    {% submit @submit_label %}
  </div>
{% endform_for %}
