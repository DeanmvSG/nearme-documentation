- title "Listings"

.dash-head.clearfix
  %p=t "dashboard.transactables.manage"
  = link_to new_dashboard_company_transactable_type_transactable_path(@transactable_type), class: "new-transactable-btn dash-head-btn btn blue pull-right" do
    = t('dashboard.items.list_new_item')
  - if HiddenUiControls.find('dashboard/transactables/bulk_upload').visible?
    = link_to '#', class: "bulk-upload blue pull-right", data: { modal: true, href: new_dashboard_company_transactable_type_data_upload_path(@transactable_type) } do
      Bulk Upload
.dash-body
  .dash-sub-nav
    %ul
      - TransactableType.services.each do |transactable_type|
        %li{class: transactable_type == @transactable_type ? "active" : ""}
          = link_to transactable_type.translated_bookable_noun(10), dashboard_company_transactable_type_transactables_path(transactable_type)

  - if HiddenUiControls.find('dashboard/transactables/search').visible?
    = simple_form_for :search, wrapper: :bs3, :url => dashboard_company_transactable_type_transactables_path(@transactable_type), :method => :get do |f|
      = f.input :query, label: t('dashboard.items.search.search_your_products'), input_html: { value: (params[:search] || {})[:query] }
      .row
        .col-md-12
          = f.submit t('dashboard.items.search.search'), class: "btn medium blue pull-right"

  .listings-header
    .row
      .col-md-3
        %p Picture
      .col-md-3
        %p Name
      .col-md-3
        %p= @transactable_type.skip_location? ? t('quantity') : t('simple_form.labels.location.name')
      .col-md-2
        %p Price
  = render @transactables
  = will_paginate_styled @transactables
