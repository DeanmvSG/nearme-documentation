.dash-head.clearfix
  = link_to 'MANAGE LISTINGS', dashboard_company_product_type_products_path(@product_type)
  &gt;
  %p LIST NEW ITEM
.dash-body
  = simple_form_for @product_form, wrapper: :bs3, :url => dashboard_company_product_type_products_path(@product_type, @product_form.product), :html => { id: "product_form", multipart: true, method: :post } do |f|
    = render 'form', f: f