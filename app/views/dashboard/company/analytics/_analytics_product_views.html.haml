.box
  - if @visits.total_entries.zero?
    %p.no_data
      = t('dashboard.analytics.no_product_views_yet')
  - else
    .chart
      .total.right
        .total-number.left
          %span.total
            = "#{@chart.total} visits"
        %span{class: 'total-text'} 7 day total
      %canvas#chart

    %table.table.table-simple
      %thead
        %tr
          %th Date
          %th Count
      %tbody
      - @visits.each do |visit|
        %tr
          %td
            = visit.impression_date
          %td
            = visit.impressions_count

    = will_paginate_styled @visits, :params => { :analytics_mode => 'product_views' }
