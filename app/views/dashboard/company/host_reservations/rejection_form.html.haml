%header.dialog__header
  %h2#dialog__title= t('dashboard.user_recurring_bookings.host_actions.confirmations.decline')

= dashboard_simple_form_for(@reservation, url: reject_dashboard_company_host_reservation_path(@reservation, listing_id: @reservation.transactable)) do |f|
  .dialog__body

    = f.input :rejection_reason, placeholder: t('dashboard.user_recurring_bookings.decline_reason_placeholder'), label: false, tabindex: '1'

  .dialog__actions
    = f.submit t('dashboard.user_recurring_bookings.host_actions.decline')
