= simple_form_for @blog, url: dashboard_blog_path, wrapper: :bs3, html: { multipart: true } do |f|

  = f.input :enabled
  = f.input :name

  = f.input :header_logo
  = @blog.image_preview(:header_logo)
  - if @blog.header_logo.image.present?
    = link_to 'Delete', delete_image_dashboard_blog_path(:image_type => :header_logo), data: { confirm: t('confirmations.are_you_sure') }, method: :delete

  = f.input :header_icon
  = @blog.image_preview(:header_icon)
  - if @blog.header_icon.image.present?
    = link_to 'Delete', delete_image_dashboard_blog_path(:image_type => :header_icon), data: { confirm: t('confirmations.are_you_sure') }, method: :delete

  .submit-bar
    = f.submit t('user_blog.buttons.save'), class: 'btn medium blue', data: { disable_with: t('user_blog.labels.please_wait')}
