- only_reservations ||= false
- if @reservations.empty? && @recurring_booking.nil? && @recurring_bookings.try(:empty?)
  %p.text-center
    = t('reservations.no_bookings_html', type: params[:action], bookable_noun: platform_context.bookable_noun)
- else

  - if @reservation
    = render 'reservation_successful'

  - if @recurring_booking && !only_reservations
    = render 'recurring_booking_successful'

  - if !only_reservations
    - (@recurring_bookings - [@recurring_booking]).each_with_index do |recurring_booking, index|
      = render recurring_booking.decorate

  - (@reservations - [@reservation]).each_with_index do |reservation, index|
    = render partial: 'dashboard/reservations/reservation', locals: { reservation: reservation.decorate }
