- if current_instance.seller_profile_enabled? || current_instance.buyer_profile_enabled?

  - tabs = []

  - if current_user.has_default_profile?
    - tabs.push({ name: t('dashboard.user_profile.sections.default'), url: dashboard_profile_path, active: ![:seller, :buyer].include?(active) })

  - if current_user.has_seller_profile?
    - tabs.push({ name: t('dashboard.user_profile.sections.seller'), url: edit_dashboard_seller_path, active: active == :seller })

  - if current_user.has_buyer_profile?
    - tabs.push({ name: t('dashboard.user_profile.sections.buyer'), url: edit_dashboard_buyer_path, active: active == :buyer })

  = dashboard_panel_multi_tabs(tabs)
