- if current_instance.seller_profile_enabled? || current_instance.buyer_profile_enabled?

  - tabs = []
  - tabs.push({ name: t('dashboard.user_profile.sections.default'), url: edit_registration_path(current_user), active: active == :default })

  - if current_user.seller_profile.present? && current_instance.seller_profile_enabled? && current_user.seller_profile.has_fields?(FormComponent::SELLER_PROFILE_TYPES)
    - tabs.push({ name: t('dashboard.user_profile.sections.seller'), url: edit_dashboard_seller_path, active: active == :seller })

  - if current_user.buyer_profile.present? && current_instance.buyer_profile_enabled?
    - tabs.push({ name: t('dashboard.user_profile.sections.buyer'), url: edit_dashboard_buyer_path, active: active == :buyer })

  = dashboard_panel_multi_tabs(tabs)
