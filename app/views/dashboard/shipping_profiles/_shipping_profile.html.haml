%header.dialog__header
  %h2#dialog__title= t('manage.buy_sell.shipping_profiles.shipping_profile')

- profile_add_success = defined?(is_success) ? 'true' : 'false'
= dashboard_simple_form_for @shipping_profile, url: form_url, :html => { id: "shipping_category_form", class: 'profiles_shipping_category_form', multipart: true, method: form_method, data: { modal: true, modal_class: 'shipping_profiles_modal', profile_add_success: profile_add_success } } do |f|
  .dialog__body
    = f.input :name
    .nested-fields-set
      = f.simple_fields_for :shipping_rules do |shipping_rule|
        .nested-container
          = render 'dashboard/shipping_profiles/shipping_rule_form', f: shipping_rule
      %p.clearfix.add-link
        = link_to_add_association t('manage.buy_sell.shipping_profiles.add_new_shipping_rule') , f, :shipping_rules, partial: 'dashboard/shipping_profiles/shipping_rule_form', class: 'btn btn-primary'

  .dialog__actions
    = submit_tag t('manage.buy_sell.shipping_profiles.save')

:javascript
  $(document).trigger('init:shippingprofilescontroller.nearme');
