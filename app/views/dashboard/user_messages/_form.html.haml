%header.dialog__header
  %h2#dialog__title
    = t('user_messages.send_a_message_to', recipient_name: @user_message.recipient_name)

= dashboard_simple_form_for @user_message, url: @user_message.create_path, data: { modal: true } do |f|

  .dialog__body
    = f.input :body
  = f.simple_fields_for :attachments, @user_message.attachments.first_or_initialize, html: { :'data-attachment-form'=> true } do |attachment|
    = attachment.input :file, as: :file, input_html: { data: { file: true } }

  .dialog__actions
    = f.submit t('user_messages.send_message'), class: 'btn btn-green'
