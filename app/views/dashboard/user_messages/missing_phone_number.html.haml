%header.dialog__header
  %h2#dialog__title
    = t('user_messages.mobile_number.headers.missing')

#missing-mobile-number
  = dashboard_simple_form_for current_user, url: mobile_number_user_path(current_user), data: { modal: true } do |f|

    .dialog__body
      = render 'registrations/attributes/mobile_number', f: f
      = hidden_field_tag :return_path, @return_path

    .dialog__actions
      = f.submit t('user_messages.mobile_number.buttons.save_changes'), class: 'btn btn-green'
      = link_to t('user_messages.mobile_number.buttons.skip'), '#', data: { href: @return_path, modal: true }, class: 'btn btn-grey btn-full'

  :javascript
    $(document).trigger('init:mobileNumberForm.nearme');
