%header.dialog__header
  %h2#dialog__title= t('dashboard.order_items.reject')

= dashboard_simple_form_for(@order_item, url: reject_dashboard_order_order_item_path(@order_item.order, @order_item), method: :put) do |f|
  .dialog__body

    = f.input :rejection_reason, placeholder: t('dashboard.order_items.reject_placeholder'), label: false, tabindex: '1'

  .dialog__actions
    = f.submit t('general.reject')
