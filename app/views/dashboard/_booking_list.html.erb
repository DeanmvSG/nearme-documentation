<ul class="bookings list">
  <% bookings.each do |booking|%>
    <li>
      <p class="em">
        <strong><%= link_to(booking.workplace.name, booking.workplace) %></strong> on
        <time datetime="<%= booking.date %>"><%= l(booking.date, :format => :long) %></time>
        (<%= booking.state_name %>)
      </p>
      <div class="actions">
        <%= render :partial => "user_actions",  :locals => {:booking => booking} if current_user == booking.user %>
        <%= render :partial => "owner_actions", :locals => {:booking => booking} if current_user == booking.workplace.creator %>
      </div>
    </li>
  <% end %>
</ul>
