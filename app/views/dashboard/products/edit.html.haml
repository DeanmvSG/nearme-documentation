.dash-page
  .dash-head.clearfix
    %p MANAGE LISTINGS > EDIT ITEM
    - if false # TODO enable when changes for bulk upload are merged with spree
      %a.dash-head-btn{:href => ""}
        .btn.blue Bulk Upload
  .dash-body
    = simple_form_for @product_form, wrapper: :bs3, :url => dashboard_product_path(@product_form.product), :html => {id: "product_form", :multipart => true,  method: :put } do |f|
      = render 'forms/product_form', f: f

      = f.simple_fields_for :shipping_methods do |shipping_method|
        %fieldset
          = render 'forms/shipping_form', f: shipping_method
      .row.text-right
        %a.shipping-profile-top.add_shipping_profile
          =image_tag("themes/buy_sell/icon-cross.png")
          %span Create New Shipping Profile
      .submit-bar
        = link_to dashboard_products_path do
          .btn.gray Cancel
        = f.submit "Save item", class: "btn medium blue"

- content_for :domready do
  new TaxonAutocomplete($("#product_form"));
  new Dashboard.AddressController($("#product_form"));
  var boarding_form = new BoardingForm($("#product_form"));