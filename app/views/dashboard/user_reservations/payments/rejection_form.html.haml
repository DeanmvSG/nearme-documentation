%header.dialog__header
  %h2#dialog__title= t('dashboard.payments.reject')

= dashboard_simple_form_for(@order, url: reject_dashboard_user_reservation_payment_path(@order, @payment), method: :put) do |f|
  .dialog__body

    = f.input :rejection_reason, placeholder: t('dashboard.payments.reject_placeholder'), label: false, tabindex: '1'

  .dialog__actions
    = f.submit t('general.reject')
