- title t('reset_password_form.title')

.row-fluid
  #signup
    .span8.offset2
      .box
        %h2= t 'reset_password_form.heading'
        %p.intro= t 'reset_password_form.instructions_email'

        = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
          .email-holder.input-icon-holder
            = f.input :email, :label => false, :placeholder => "Email", :tabindex => '1'
            %span.ico-mail

          .actions
            = f.submit t('reset_password_form.buttons.reset')

- if request.xhr?
  :javascript
    Modal.setClass('sign-up-modal')

- content_for :domready do
  $(function() { new SigninForm($('#signup')) });

