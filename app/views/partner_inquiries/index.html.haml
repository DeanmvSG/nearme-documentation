.get-started
  .body
    .container-fluid
      .row-fluid
        .span10.offset1.text-center
          %h2 Get started today.
      .row-fluid
        .span4.offset4
          = simple_form_for @partner_inquiry do |f|
            .validation-fail
            = f.input :name, :placeholder => 'Your Name', :label => false
            = f.input :company_name, :placeholder => 'Company Name', :label => false
            = f.input :email, :placeholder => 'Email Address', :label => false

            .form-actions
              = f.button :submit, 'Okay, Go!', :class => 'btn-gray', :'data-original-text' => 'Okay, Go!', :'data-disabled-text' => 'Saving ...'

