<div class="featured-workplace">
  <details>
    <% photo = workplace.photos.first %>
    <div class="grid_2 alpha">
      <%= link_to image_tag(photo.medium.url, :title => workplace.description, :alt => workplace.name, :width => 135, :height => 135), photo.large.url %>
    </div>
    <div class="grid_5 omega">
      <h3><%= link_to workplace.name, workplace %></h3>
      <p><%= truncate(workplace.company_description) %></p>
    </div>
  </details>
  <br clear="both" />
</div>
