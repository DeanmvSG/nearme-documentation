<%= simple_form_for workplace do |f| %>
  <% textile_hint = "Parsed using #{link_to("Textile", "http://en.wikipedia.org/wiki/Textile_%28markup_language%29", :target => "_blank")}".html_safe %>
  <%= f.input :name %>
  <%= f.input :address, :input_html => {:rows => 4} %>
  <%= f.input :maximum_desks, :input_html => { :size => 4, :min => 1 } %>
  <%= f.input :description, :input_html => {:rows => 8}, :hint => textile_hint %>
  <%= f.input :company_description, :input_html => {:rows => 8}, :hint => textile_hint %>
  <%= f.input :url, :as => :string, :label => "Company URL" %>
  <%= f.input :confirm_bookings, :as => :radio %>
  <%= f.input :fake, :label => "Test workplace", :hint => "If you are testing this site for Rails Rumble, check this, OTHERWISE PEOPLE WILL COME TO YOUR OFFICE AND EXPECT YOU TO HAVE A DESK FOR THEM" %>
  <% if current_user.admin? %>
    <%= f.association :creator, :select => "Select a creator..." %>
  <% end %>
  <%= f.button :submit %>
<% end %>
