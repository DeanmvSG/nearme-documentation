<% content_for :sidebar do %>

  <% if @workplace.created_by?(current_user) %>
    <div id="controls">
      <%= link_to "Edit Workplace", edit_workplace_path(@workplace) %>
      <%= link_to "Manage Workplace Photos", workplace_photos_path(@workplace) %>
    </div>
  <% end %>

  <div id="photos">
    <p>Photos</p>
    <ul>
      <% @workplace.photos.each do |photo| %>
        <li>
          <%= link_to photo.large.url do %>
            <%= image_tag(photo.thumb.url, :alt => photo.description) %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <br clear="both" />
  </div>

  <div id="map">
    <p>Map goes here.</p>
  </div>

  <div id="address">
    <%= simple_format @workplace.address %>
  </div>

<% end %>

<div id="company">
  <h1><%= @workplace.name %></h1>
  <p><%= @workplace.company_description %></p>
</div>

<div id="bookings">
  <p>Bookings here</p>
</div>

<div id="extra_info">
  <h2>Extra Info</h2>
  <p><%= @workplace.description %></p>
</div>

