<table class="bookings extended">
  <thead>
    <tr>
      <th>Mon</th>
      <th>Tue</th>
      <th>Wed</th>
      <th>Thu</th>
      <th>Fri</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% booking_schedule_for(workplace, weeks) do |date, num, availability, new_row| %>
        <% if new_row %>
          </tr><tr>
        <% end %>
        <td class="day <%= availability %>">
          <time datetime="<%= date %>">
            <%= date.strftime("%b %d") %><sup><%= date.day.ordinal %></sup>
          </time>
          <details class="availability">
            <%= link_to new_workplace_booking_url(workplace, :date => date) do %>
              <%#= pluralize(num, "spots") %>
              <%= num %>
            <% end %>
          </details>
        </td>
    <% end %>
    </tr>
  </tbody>
</table>
<% content_for :script do -%>
<script type="text/javascript">
  $(function(){
    $("td.day details.availability a").click(function(e){
      // e.stopPropagation();
      var overlay = $("body").overlay({ ajax: $(this).attr("href"), position: { my: "top", at: "bottom", of: $(this).parents('td') }, html: "Working&hellp;", 'class': "context" });
      return false;
    })
  });
</script>
<% end %>
