.row-fluid.location-photos{:'data-photo-aspect-w' => PhotoUploader::SPACE_FULL_IMAGE_W, :'data-photo-aspect-h' => PhotoUploader::SPACE_FULL_IMAGE_H}

  .span8.photos-container
    - if @location.photos.any?
      .carousel.slide
        .carousel-inner
          - @location.photos.each_with_index do |photo, index|
            .item{:class => ("active" if index == 0)}
              = image_tag photo.url(:golden)
              - if photo.caption.present?
                .carousel-caption.ico-info
                  = photo.caption

        - if @location.photos.size > 1
          = link_to "", ".carousel", :class => "carousel-control left ico-arrow-left", 'data-slide' => 'prev'
          = link_to "", ".carousel", :class => "carousel-control right ico-arrow-right", 'data-slide' => 'next'

    - else
      #panorama


  .pull-left{:class => "span4" }
    .map
      .map-wrapper.google-map
        .map-container

      %address{"data-lat" => @location.latitude, "data-lng" => @location.longitude, :class => 'hidden'}
        #address-popover
          = location_format_address(@location.address)
          = link_to "https://maps.google.com/maps?q=#{@location.address}", target: '_blank' do
            %span.ico-link.padding

