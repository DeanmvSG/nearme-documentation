.row-fluid
  .span4
    %h2 Our Space
    %p= truncate_with_ellipsis mask_phone_and_email_if_necessary(sanitize(@location.description)), 250
    - if @amenities
      %h2= t('amenities_attribute')
      %ul
        - @location.amenities.each do |amenity|
          %li= amenity

  .span4
    %h2 About Us
    %p
    %p= truncate_with_ellipsis mask_phone_and_email_if_necessary(@location.company.description), 250

    - if @amenities
      %h2= t('amenities_attribute')
      %ul
        - @location.amenities.each do |amenity|
          %li= amenity

  .span4
    %h2 Contact
    %p
    - if user_signed_in?
      = location_contact_phone(@location)
      = location_contact_email(@location)
    - else
      %span.ico-warning.padding
        =raw "#{link_to( 'Log in', '#', :data => { modal: true, href: new_user_session_path(:return_to => location_url(@location)), 'modal-class' => 'sign-up-modal' } )} or #{link_to('sign up', '#', :data => { modal: true, href: new_user_registration_path(:return_to => location_url(@location)), 'modal-class' => 'sign-up-modal' } )} to contact the #{platform_context.lessor}."

