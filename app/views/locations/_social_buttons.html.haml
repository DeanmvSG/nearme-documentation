- url ||= location_url(location)
- content_for :meta do
  = render :partial => 'shared/og_meta', :locals => { :object => location, :url => url }
.social-buttons-wrapper
  .facebook
    .fb-like{:'data-href' => url, :'data-colorscheme' => "light", :'data-layout' => "button_count", :'data-action' => "like", :'data-show-faces' => "false", :'data-send' => "false"}
    #fb-root
    - content_for :script do
      :javascript
        (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=#{DesksnearMe::Application.config.facebook_key}";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

  .social-buttons

    .twitter
      = render 'locations/twitter_social_button', location: location
      %script
        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

    .linkedin
      %script{:src => "//platform.linkedin.com/in.js", :type => "text/javascript", :lang => 'en_US'}
      %script{:type => "IN/Share", :'data-counter' => "right", :'data-url' => url}

    .google-plus
      .g-plusone{:'data-size' => "medium", :'data-href' => url}
      :javascript
        window.___gcfg = {
          parsetags: 'onload'
        };
        (function() {
          var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
          po.src = 'https://apis.google.com/js/plusone.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
          })();
  .clearfix
