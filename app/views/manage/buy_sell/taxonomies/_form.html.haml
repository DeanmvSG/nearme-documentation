#taxonomy_form.control-group
  = simple_form_for [:manage, :buy_sell, @taxonomy], :html => { class: "form-horizontal form-expandable" } do |f|

    .control-group
      = f.input :name, placeholder: 'What is the name of the taxonomy?', required: true, input_html: { class: 'form-control'}

      - unless @taxonomy.new_record?
        .control-group
          .input-container.col-xs-12
            #ajax_error{style: 'display: none;'}
            %p Right click a child in the tree to access the menu for adding, deleting or sorting a child.
            #taxonomy_tree

      .row.dropshadow
    .control-group
      .actions= f.button :submit, class: "btn btn-green pull-right"

- unless @taxonomy.new_record?
  - javascript_include_tag('/Users/leming/code/desksnearme/app/assets/javascripts/instance_admin/sections/buy_sell.js.coffee')
  - content_for :domready do
    var taxonomy_taxons_path = "#{spree.api_taxonomy_taxons_path(@taxonomy)}";
    var instance_admin_taxonomy_taxons_path = "#{edit_taxon_instance_admin_buy_sell_taxonomy_path(@taxonomy)}";
    var jstree_theme_path = "#{stylesheet_path("instance_admin/jstree_themes/apple/style.css")}";
    new BuySellController($('#taxonomy_form'), #{@taxonomy.id});
