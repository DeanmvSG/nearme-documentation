- title "Stock Locations"

= show_manage_navigation(:configuration, :stock_locations)

.row-fluid
  .span8.offset2
    .box
      %header
        %ul.location-and-listings
          %li.location
            .name.left
              Manage Stock Locations
      %ul.location-and-listings
        %li.listing
          .right
            = link_to 'New Stock Location', new_manage_buy_sell_stock_location_path, class: 'btn btn-medium btn-green'
        %li.listing.action-buttons
          .span4
            = t('stock_location.name')
          .span4
            = t('stock_location.state')
          .span3.state.text-right


          .clearfix
        = render partial: 'stock_location', collection: @stock_locations
      = will_paginate @stock_locations

