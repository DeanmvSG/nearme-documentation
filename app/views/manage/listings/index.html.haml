= render :layout => 'manage/layout' do
  .box
    %h2
      Manage
      %strong= @location.name

    = render 'manage/locations/navigation', :active => :listings
    = context_flash

    - @location.listings.each do |listing|
      .inner-box.listing
        .actions.right
          = link_to [:edit, :manage, listing], :class => "btn btn-orange btn-small" do
            %span.ico-edit.padding Edit        
          = link_to [:manage, listing], :method => :delete, :confirm => "Are you sure you want to delete this listing?", :class => "btn btn-red btn-small" do
            %span.ico-close.padding Delete

        %h3= listing.name

    = link_to [:new, :manage, @location, :listing], :class => "btn btn-blue btn-medium" do
      %span.ico-plus.padding Add a Listing
