= render :layout => 'manage/layout' do
  .box
    %h2
      Manage
      %strong= @location.name

    = render 'manage/locations/navigation', :active => :listings

    - @location.listings.each do |listing|
      .inner-box.listing
        .actions.right
          = link_to "Delete", [:manage, listing], :method => :delete, :confirm => "Are you sure you want to delete this listing?", :class => "btn btn-red btn-small"
          = link_to "Edit", [:edit, :manage, listing], :class => "btn btn-blue btn-small"

        %h3= listing.name

    = link_to "Add a Desk or Room", space_wizard_desks_url(:company_id => @location.company.id, :space_id => @location.id), :class => "btn btn-green btn-medium"
