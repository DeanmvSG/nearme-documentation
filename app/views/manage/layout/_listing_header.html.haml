%div
  %section.box.box-dim.listing
    - if editable && listing.persisted?
      = link_to edit_manage_location_listing_path(location, listing), :class => 'edit-link' do
        = render :partial => 'manage/layout/listing_header_inside', :locals => { :listing => listing, :location => location, :editable => editable }
    - else
      = render :partial => 'manage/layout/listing_header_inside', :locals => { :listing => listing, :location => location, :editable => editable }

    = yield if block_given?

