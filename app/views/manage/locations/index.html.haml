= render :layout => 'manage/layout' do
  .box
    %h2
      Manage
      %strong= @company.name

    = render 'manage/companies/navigation', :active => :spaces

    - @company.locations.each do |location|
      .inner-box.location
        .actions.right
          = link_to_once [:edit, :manage, location], :class => "btn btn-orange btn-small" do
            %span.ico-edit.padding Edit
          = link_to [:manage, location], :method => :delete, :confirm => "Are you sure you want to delete this Space?", :class => "btn btn-red btn-small" do
            %span.ico-x.padding Delete

        = link_to_once location do
          %h3= location.name

    = link_to_once space_wizard_space_url(:company_id => @company.id), :class => "btn btn-blue btn-medium" do 
      %span.ico-plus.padding Add a Listing

