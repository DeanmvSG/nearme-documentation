= render :layout => 'manage/layout' do
  .box
    %h2
      Manage
      %strong= @company.name

    = render 'manage/companies/navigation', :active => :spaces

    - @company.locations.each do |location|
      .inner-box.location
        .actions.right
          = link_to "Delete", [:manage, location], :method => :delete, :confirm => "Are you sure you want to delete this Space?", :class => "btn btn-red btn-small"
          = link_to "Edit", [:edit, :manage, location], :class => "btn btn-blue btn-small"

        %h3= location.name

    = link_to "Add a Space", space_wizard_space_url(:company_id => @company.id), :class => "btn btn-green btn-medium"

