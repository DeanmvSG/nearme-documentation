= render :layout => 'manage/layout/dashboard' do
  = render :partial => 'location_name_with_links', :locals => { :location => location }
  .spacer
  = render location
  - if location.persisted?
    = link_to manage_location_path(@location), :method => :delete, :confirm => 'Are you sure?', :class => "delete delete-location" do
      %span.ico-trash.padding
        Delete this location

  .actions
    = link_to '#', :class => 'btn btn-green btn-large dashboard-save', :id => 'submit-link', :disable_with => 'Submiting...' do
      %span.ico-save.padding
        Save

- content_for :domready do
  $(function() { new Dashboard.LocationController($('#location-form')) });

