.row-fluid
  .span8.offset2
    %h1
      %span.ico-location.padding
        Manage Locations
    %section.locations-holder
      %section.locations-area
        %div
          %section.box.location
            %header.location
              %span.padding.ico-location.location-header
                = @location.name
            .location-content
              = render @location
              = link_to manage_location_path(@location), :method => :delete, :class => "delete delete-location" do
                %span.ico-trash.padding
                  Delete this location

            %section.listings
              .action
                = link_to '#', :class => 'btn btn-green btn-large add-listing', :id => 'submit-link', :disable_with => 'Submiting...' do
                  %span.ico-save.padding
                    Save

- content_for :script do
  :javascript
    $(function() {
      new Dashboard.LocationController($('#location-form'))
      new AvailabilityRulesController($('#location-form'))
    });

