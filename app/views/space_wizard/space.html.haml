= render :layout => 'wizard_layout', :locals => { :step => 2 } do
  %p.intro
    Enter the details of your space below! Weâ€™ll get you to tell us all your company details later.

  = simple_form_for @location, :url => space_wizard_space_url, :html => { :class => "form-horizontal new_location" } do |f|
    = f.input :name, :label => 'Space name', :placeholder => 'Name your space!'

    .control-group
      %label.control-label Space location
      .controls
        = f.text_field :address, :placeholder => "Type an address...", :'data-behavior' => 'address-autocomplete'
        %p.hint
          We'll try to geolocate your address on the map below.

        .map{:style => "display: none", :'data-marker' => image_path("components/map-pin.png")}
          .map-container{:style => "height: 240px; width: 373px"}

    = f.input :description, :label => 'Space description', :placeholder => 'Tell us about about your space. Be exciting!'
    = f.input :currency, :as => :currency, :label => "Booking currency"

    .actions
      = f.submit 'Create my space'

:javascript
  $(function() {
    new SpaceWizardSpaceForm($('form.new_location'))
  });
