%tr
  %td= link_to admin_resource_name(resource), admin_user_url(resource)
  %td= resource.email
  %td
    .btn-group
      %a.btn.dropdown-toggle{:'data-toggle' => 'dropdown'}
        Options
        %span.caret

      %ul.dropdown-menu
        %li= link_to "Edit", [:edit, :admin, resource]
        %li= link_to "Login As", [:login_as, :admin, resource], :method => :post, :confirm => "This will log you out and re-log you in as this user"
        %li.divider
        %li= link_to "Delete", [:admin, resource], :method => :delete, :confirm => "Are you sure you want to delete this?"


