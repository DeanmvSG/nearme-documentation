.row-fluid  
  .span8.offset2
    %h1 Messages

    .box
      = render "user_messages/header"

      - if @show_user_message.thread_context.present?
        .row-fluid
          = simple_form_for @user_message, url: polymorphic_url([@show_user_message.thread_context, @user_message]) do |f|
            = f.hidden_field :replying_to_id
            - if @user_message.errors.present?
              .span12.errors
                = f.error :body

            .span10
              = f.text_area :body
            .span2.clearfix
              = f.submit "Send", class: "btn btn-large btn-green"
      - else
        .listing-deleted
          .body
            You can no longer send messages regarding this context, as it has been deleted.

      - @user_messages.each do |user_message|
        = render 'user_message_for_show', user_message: user_message
