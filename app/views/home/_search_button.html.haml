#search_row.span6.offset3
  .row-fluid
    %h1.tagline
      = platform_context.tagline
  .black-box.row-fluid
    %form#listing_search.home_search{:action => search_path, :method => "get"}
      .no-text-search
        %input#search{:name => "q", :type => "hidden", :value => " "}
        %a.btn.btn-green.btn-large{ "data-disable-with" => t('homepage.disabled_buttons.search'), :rel => "submit", :href => "" }
          %span.ico-search
          = t 'homepage.buttons.search'
