- if user_signed_in?
  = link_to controlpanel_path, :class => "header-link" do
    %span.ico-dashboard.padding New Dashboard  

  %ul.nav
    %li.dropdown
      %a.ico-dashboard.dropdown-toggle.header-link{"data-toggle" => "dropdown", :href => "#"}
        %span Dashboard
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to_once manage_companies_path do
            %span.ico-location.padding Manage Locations
        %li
          = link_to_once reservations_dashboard_path do
            %span.ico-manage-guests.padding Manage Guests
        %li.divider
        %li
          = link_to_once bookings_dashboard_path do
            %span.ico-bookings.padding Your Bookings
    %li.dropdown
      %a.ico-user.dropdown-toggle.header-link{"data-toggle" => "dropdown", :href => "#"}
        %span
          = current_user.first_name
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to_once edit_user_registration_path do
            %span.ico-crosshairs.padding Settings
        %li
          = link_to_once destroy_user_session_path, :method => :delete do
            %span.ico-logout.padding Log out

- else
  = link_to_once new_user_session_url, :class => "header-link header-second" do
    %span.ico-login.padding Log in
  = link_to_once new_user_registration_url, :class => "header-link header-first" do
    %span.ico-sign-up.padding Sign Up    

- if !user_signed_in? || current_user.companies.empty?
  = link_to_once new_space_wizard_url, :class => "btn btn-blue btn-medium" do
    %span.ico-add-location List Your Space
