<footer>
  <div class="row-fluid">
    {% if platform_context.is_footer_languages_select? %}
      <div class="footer-languages-select">
        {% languages_select %}
      </div>
    {% endif %}
  </div>
  <div class="row-fluid">
    <div class="mobile-row mobile-clearfix">
      <div class="span3 mobile6 col-md-3 col-xs-6">
        <ul class="pages">
          {% for page in platform_context.pages %}
            <li><a href="{{ page.page_url }}" target="{{ page.open_in_target }}" rel="{{ page.link_rel }}">{{ page.title }}</a></li>
          {% endfor %}

          {% if platform_context.is_desksnearme? %}
            <li class="clear-footer"><a href="http://blog.desksnear.me/careers/" target="_blank">Careers</a></li>
            <li><a href="https://itunes.apple.com/us/app/desks-near-me/id529634519?mt=8" target="_blank">iPhone App</a></li>
          {% endif %}
        </ul>
      </div>
      <div class="span3 mobile6 col-md-3 col-xs-6">
        <div class="social-wrapper">
          <ul class="social-icons">
            {% if platform_context.facebook_url != blank %}<li><a href="{{ platform_context.facebook_url }}"  ref="nofollow" target="_blank"><span class="image ico-facebook-full"></span><span class="text">Facebook</span></a></li>{% endif %}
            {% if platform_context.twitter_url != blank %}<li><a href="{{ platform_context.twitter_url }}" ref="nofollow"  target="_blank"> <span class="image ico-twitter"></span><span class="text">Twitter</span></a></li>{% endif %}
            {% if platform_context.gplus_url != blank %}<li><a href="{{ platform_context.gplus_url }}" rel="publisher nofollow" target="_blank"><span class="image ico-google-plus"></span><span class="text">Google+</span></a></li>{% endif %}
            {% if platform_context.blog_url != blank %}<li><a href="{{ platform_context.blog_url }}" rel="nofollow" target="_blank"><span class="image ico-blog"></span><span class="text">Blog</span></a></li>{% endif %}
          </ul>
        </div>
      </div>
    </div>
    <div class="span3 col-md-3 col-xs-12">
      <div class="copyright">
        <span>{{ platform_context.address }}</span><br />
        <span>{{ platform_context.phone_number }}</span><br />
        <span> &copy; {{ current_year }} {{ platform_context.site_name }}</span>
      </div>
    </div>
    <div class="span3 col-md-3 clearfix">
      <a href="http://near-me.com/" target="_blank"><div class="near-me-badge"></div></a>
    </div>
  </div>
</footer>
