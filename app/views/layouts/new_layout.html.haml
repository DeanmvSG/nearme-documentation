!!!
%html
  %head
    %title
      Desks Near Me - #{show_title? ? yield(:title) : "Where do you want to work today?"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}  
    %meta{:content => "Rent out your extra space, or find a desk near you.", :name => "description"}/
    %meta{:content => "tellthemwhen_verif_1af11d7040aa81a9ab2e07d4efee180d2e93d030", :name => "TellThemWhen"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    = csrf_meta_tag
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
    %link{:href => "/favicon.ico?9002", :rel => "shortcut icon"}/
    = stylesheet_link_tag 'new_layout'
    = stylesheet_link_tag 'vendor/fancybox/jquery.fancybox-1.3.1', :media => "screen, projection"

    = javascript_include_tag "https://maps.google.com/maps/api/js?sensor=true"
    = javascript_include_tag "//use.typekit.net/nyj7syq.js"
    = javascript_include_tag "https://js.stripe.com/v1/"
    = javascript_include_tag :application

    :javascript
      try{Typekit.load();}catch(e){}
    
    /[if lt IE 9]
      = javascript_include_tag 'https://html5shim.googlecode.com/svn/trunk/html5.js'

  %body
    #TTWNotify{:style => "display:none;"}

    .dnm-page
      .header.container
        %header.row
          .logo-container
            = link_to "Desks Near Me", root_url, :id => "logo"
          #header_links.links-container
            = render "layouts/header_navigation"

      %section#content{:class => "#{controller_name}"}
        = render "layouts/hero"
        %div{:class => "container #{'legacy' if legacy?}"}
          = flashes
          = yield

      = render :partial => "layouts/footer"

    = render :partial => "shared/modal"
    = yield :script
    = render :partial => "layouts/analytics" if Rails.env.production?

    - if Rails.env.production?
      %script{:charset => "utf-8", :type => "text/javascript"}
        (function(){
        t = document.createElement('script');t.async=true;t.type ='text/javascript';
        t.src = ('https:' == document.location.protocol ? 'https://secure.' : 'http://api.') + 'tellthemwhen.com/api/v2/notices/620b94a22ed.js';
        var s=document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(t,s);
        })();

    = javascript_tag do
      = yield :domready
