!!!
%html
  %head
    %title
      #{@blog_instance.name}
    %meta{:'http-equiv' => "Content-type", :content=> "text/html;charset=UTF-8"}
    = csrf_meta_tag
    = render 'layouts/favicon'
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css'
    = stylesheet_link_tag 'blog'
    = javascript_include_tag :blog

  %body.blog
    .header
      .col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2.logo
        - url = @platform_context.present? ? @platform_context.theme.logo_image.url : asset_path('blog/logo.png')
        = link_to image_tag(url), blog_posts_path

      - header = @blog_post.try(:header).presence || @blog_instance.header
      - if header.present?
        .header-image
          = link_to blog_posts_path do
            = image_tag header.url, title: @blog_instance.name
      - else
        .heading
          = link_to @blog_instance.name, blog_posts_path

    .container
      .col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
        = yield

    = yield :script
