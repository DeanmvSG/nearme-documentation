:javascript
  analytics.init("#{MIXPANEL_TOKEN}");
- if flash[:redirected_from_sign_up] && current_user
  :javascript
    analytics.alias(#{current_user.id});
    analytics.set({
      $email: "#{current_user.email}",
      $name: "#{current_user.name}",
      $created: new Date('#{current_user.created_at}')
    });
- elsif current_user
  :javascript
    analytics.identify(#{current_user.id});
