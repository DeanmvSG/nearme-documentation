- if @blog_instance.try(:is_near_me?)
  %link{href: "/assets/platform_home/favicon.ico", rel: "shortcut icon"}/
- else
  %link{href: platform_context.favicon_image.url || '/assets/platform_home/favicon.ico', rel: "shortcut icon"}/
  - if platform_context.icon_image.url
    %link{href: platform_context.icon_image.url, rel: "icon", sizes: "60x60"}/
    %link{href: platform_context.icon_image.url, rel: "apple-touch-icon-precomposed", sizes: "60x60"}/
  - if platform_context.icon_retina_image.url
    %link{href: platform_context.icon_retina_image.url, rel: "icon", sizes: "120x120"}/
    %link{href: platform_context.icon_retina_image.url, rel: "apple-touch-icon-precomposed", sizes: "120x120"}/
