!!!
%html{dir: "ltr", lang: "en-US", xmlns: "http://www.w3.org/1999/xhtml"}
  %head
    %title= content_for?(:title) ? yield(:title) : 'Near Me'

    %meta{content: "text/html; charset=US-ASCII", "http-equiv" => "Content-type"}
    %meta{content: "width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1", name: "viewport"}

    = render 'shared/raygun/libs'

    = csrf_meta_tag
    = stylesheet_link_tag 'instance_wizard'

  %body
    .wrapper
      - flash.each do |type, message|
        .alert.static{:class => "#{type}"}
          %p= message
      = yield

    = webpack_manifest_script
    = webpack_bundle_tag 'common'
    = webpack_bundle_tag 'instancewizard'

    = render 'shared/raygun/init'
