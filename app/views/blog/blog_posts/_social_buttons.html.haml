.social-buttons-wrapper{class: @blog_instance.facebook_app_id.present? ? '' : 'without-facebook'}
  - if @blog_instance.facebook_app_id.present?
    .facebook
      .fb-like{:'data-href' => blog_post_url(blog_post), :'data-colorscheme' => "light", :'data-layout' => "button_count", :'data-action' => "like", :'data-show-faces' => "false", :'data-send' => "false"}

  .social-buttons

    .twitter
      = link_to "Tweet", "https://twitter.com/share", :class => "twitter-share-button", :'data-text' => blog_post.title, :'data-url' => blog_post_url(blog_post)
      %script
        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

    .linkedin
      %script{:src => "//platform.linkedin.com/in.js", :type => "text/javascript", :lang => 'en_US'}
      %script{:type => "IN/Share", :'data-counter' => "right", :'data-url' => blog_post_url(blog_post)}

    .google-plus
      .g-plusone{:'data-size' => "medium", :'data-href' => blog_post_url(blog_post)}
      :javascript
        window.___gcfg = {
          parsetags: 'onload'
        };
        (function() {
          var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
          po.src = 'https://apis.google.com/js/plusone.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
          })();
  .clearfix

