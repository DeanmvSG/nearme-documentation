= simple_form_for [:blog_admin, @blog_post], :html => { :multipart => true } do |f|
  = f.input :title, :placeholder => 'Post title', :input_html => { :data => { :slug_changed => @blog_post.slug_changed?, :slug_source => true }}

  = f.input :content, :input_html => { :class => 'wide' }
  = f.input :published_at, as: :date, include_blank: true
  = f.input :slug, :data => {:slug => true}
  = f.input :header
  = link_to(@blog_post.header.filename, @blog_post.header.url) if @blog_post.header.present?

  %h4 Author
  = f.input :author_name
  = f.input :author_biography
  = f.input :author_avatar
  = link_to(@blog_post.author_avatar.filename, @blog_post.author_avatar.url) if @blog_post.author_avatar.present?

  .form-actions
    = f.button :submit

- content_for :script do
  :javascript
    $(function() {
      new BlogPostsForm($('.simple_form'));
    });
