- if current_user.try(:is_member_of?, group)
  .publish-a{ data: { user_entry_form_wrapper: '' }}
    = render 'user_status_updates/form', user_status_update: UserStatusUpdate.new, no_topic_select: true, feed: feed
  }
  }

- if feed.events.count > 0
  .content-container{ 'data-activity-feed': true, data: feed_data }
    = render partial: "shared/activity_status", collection: feed.events, as: :event, locals: { object: group }

  - if feed.has_next_page?
    - if user_signed_in?
      %p.more-a{ :'data-see-more' => true }
        %button{ data: { url: see_more_activity_feed_path(id: feed.owner_id, type: feed.owner_type), next_page: feed.events.next_page } }
          = t(:see_more)
    - elsif
      %p.more-a
        = link_to t(:see_more), new_user_session_path

- else
  %p= t("activity_feed.no_interactions_yet")
