.cell
  %article.card-a{"data-equalize" => true}
    %figure
      = link_to topic_path(topic) do
        - if topic.image.image
          = image_tag topic.image.url(:medium)
        - else
          = image_tag Placeholder.new(height: TopicImageUploader.dimensions[:medium][:height], width:  TopicImageUploader.dimensions[:medium][:width]).path

        - if topic.featured?
          %figcaption
            = t :featured
    %ul.numbers
      %li
        = t :followers
        %span= topic.followers_count
    %p.action{:'data-follow-button' => true}
      = render partial: 'shared/follow_button', locals: { object: topic }
    %h3.hx
      = link_to topic.name, topic_path(topic)
    %p= topic.description.to_s.truncate(100)
