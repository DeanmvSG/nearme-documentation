- if transactable
  .cell
    %article.card-a{"data-equalize" => true}
      %figure
        = link_to transactable.decorate.show_path do
          = image_tag transactable.cover_photo.image_url(:thumb)
          - if transactable.try(:pending_collaboration)
            %figcaption
              = t :pending
          - elsif transactable.featured?
            %figcaption
              = t :featured
      %ul.numbers
        %li
          = t :collaborators
          %span= transactable.transactable_collaborators.approved.count
        %li
          = t :followers
          %span{ data: { followers_count: "Transactable:#{transactable.id}" }}= transactable.feed_followers.count
      .action
        - if transactable.try(:pending_collaboration)
          = render 'shared/collaboration_buttons', transactable: transactable, collaboration: transactable.transactable_collaborators.find(transactable.pending_collaboration)
        - else
          = render 'shared/follow_button', object: transactable, object_type: 'Transactable', css_class: 'tiny'
      %h3.hx
        = link_to transactable.name, transactable.decorate.show_path
      %p.user
        = link_to user_path(transactable.creator.slug) do
          = image_tag transactable.creator.avatar.url(:thumb), width: 30, height: 30
          = transactable.creator.to_liquid.name_with_affiliation
      %p= custom_sanitze transactable.properties.try(:summary).to_s.truncate(100)
