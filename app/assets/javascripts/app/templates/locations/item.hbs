<section class="box box-inverse location">
  <header data-toggle="collapse" class="location" data-target="#location-{{id}}-details-holder">
  <span class="location-header">{{#if name}}{{{name}}}{{else}}New location{{/if}}</span>
    <span class="ico-edit right"/>
  </header>
  <div class="accordion location-content collapse" id="location-{{id}}-details-holder">
    <form  class="simple_form form-horizontal edit_location" id="edit_location_{{id}}">
    {{> templates_locations_overview}} 
    {{> templates_locations_photos}} 
    {{> templates_locations_availability}} 
    {{> templates_locations_amenities}} 
    </form>
    <a href="" class="delete delete-location" data-id="{{id}}"><span class="ico-close">Delete this location</span></a>
    <div class="action"> 
      <a href="" class="btn btn-green btn-large save-location" data-disable-with="Saving..."><span class="ico-check padding">Save</span></a>
    </div>
  </div>
  <section id="listing-for-{{id}}" class="">{{> templates_listings_list}}</section>
</section>
