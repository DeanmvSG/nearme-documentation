<section class="box location">
  <header data-toggle="collapse" class="location" data-target="#location-{{view_id}}-details-holder">
  <span class="padding ico-location location-header">{{#if name}}{{{name}}}{{else}}New location{{/if}}</span>
    <span class="ico-edit right"/>
  </header>
  <div class="accordion location-content collapse" id="location-{{view_id}}-details-holder">
    <form  class="simple_form form-horizontal edit_location" id="edit_location_{{id}}">
    {{!> app/templates/locations/overview}}
    {{!> app/templates/locations/photos}}
    {{!> app/templates/locations/availability}}
    {{!> app/templates/locations/amenities}}
    </form>
    <a href="" class="delete delete-location" data-id="{{id}}"><span class="ico-trash padding">Delete this location</span></a>
    <div class="action">
      <a href="" class="btn btn-green btn-large save-location" data-disable-with="Saving..."><span class="ico-check padding">Save</span></a>
    </div>
  </div>
  <section id="listing-for-{{view_id}}" class="">{{!> app/templates/listings/list}}</section>
</section>
