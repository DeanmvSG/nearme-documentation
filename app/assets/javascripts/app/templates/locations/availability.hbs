<div class="accordion-group">
  <div class="accordion-heading">
    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#locations-holder" href="#collapse-location-{{id}}-availability"><h2>Availability</h2></a>
  </div>
  <div id="collapse-location-{{id}}-availability" class="accordion-body collapse in">
    <div id="location-{{id}}-availability" class="accordion-inner">
      <div class="control-group indent">
        <div class="availability-rules">
          {{#checkbox availability_template_id}}
            {{>templates_shared_ruleList}}
          {{/checkbox}}
          {{>templates_shared_customRules}}
      </div>
      </div>
    </div>
  </div>
</div>

