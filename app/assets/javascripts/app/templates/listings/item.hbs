<section class="box box-dim">
  <header data-toggle="collapse" class="listing collapsed" data-target="#collapse-{{id}}">
    <span><img class="listing-header-thumbnail" src="/favicon.png"></span>
    <span data-listing-id="{{id}}" class="listing-header">{{{name}}}</span>
    <span class="ico-edit right"/>
  </header>
  <div id="collapse-{{id}}" class="accordion-body listing-content collapse"> 
    <div id="listing-for-{{id}}" class="accordion-inner">
      <div class="accordion" id="location-{{ref_id}}-listings-holder">
        <form class="simple_form form-horizontal edit_listing" id="edit_listing_{{id}}">
          <input type="hidden" value="{{location_id}}" />
          {{> templates_listings_overview}} 
          {{> templates_listings_photos}}
          {{> templates_listings_availability}} 
        </form>
        <a href="" class="delete delete-listing" data-id="{{id}}"><span class="ico-close">Delete this listing</span></a>
        <div class="action">
          <a href="" class="btn btn-green btn-large save-listing" data-disable-with="Saving..."><span class="ico-check padding">Save</span></a>
        </div>
      </div>
    </div>
  </div>
</section>

