= render 'shared/onboarding_heading', active_step: 3


/ content wrapper
.wrap-a.white
  .contain
    = simple_form_for :onboarding, url: onboarding_finish_url, html: { class: 'form-a' } do |f|
      %h2
        = t :people_to_follow

      / grid
      .grid-a-follow-a
        .wrap
          - (1..4).each do |index|
            .cell
              / card
              .card-b
                %figure{:style => "background-image: url(#{space_listing_placeholder_path(width: 250, height: 200)});"}
                  = link_to root_url do
                    = image_tag space_listing_placeholder_path(width: 250, height: 200)
                .wrap
                  = f.input :'follow[]', as: :boolean, input_html: { class: 'tick-a', id: "follow-#{index}" }, wrapper_html: { class: 'check' }, wrapper: :inline_checkbox, label_html: { id: "follow-#{index}", class: 'no-label' }

