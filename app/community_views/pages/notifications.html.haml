.wrap-a.reduce-top
  .contain

    %h1.h2
      = t :my_account

    %nav.tabs-a.trio
      %ul
        %li
          = link_to t(:edit_profile), profile_url
        %li.is-active
          = link_to t(:notifications), notifications_url
        %li
          = link_to t(:social_accounts), social_accounts_url

    / white box
    .box-a
      = simple_form_for :notifications, url: notifications_url, html: { class: 'form-a' } do |f|
        .fields

          = f.input :accept_emails, as: :switch

        %p.action
          = f.button :submit
