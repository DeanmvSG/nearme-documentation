.wrap-a.reduce-top
  .contain
    / tabs
    %nav.tabs-a.trio
      %ul
        %li
          = link_to t(:people), search_people_url
        %li.is-active
          = link_to t(:projects), search_projects_url
        %li
          = link_to t(:topics), search_topics_url
    / white box
    .box-a
      / filters
      = simple_form_for :search_filter, url: root_url do |f|
        .filters-a
          .box
            %h3.hx
              = t :filter_by

            = f.input :role, as: :select, multiple: true, input_html: { class: 'selectize', multiple: true }, collection: ['','Real Sense','Internet of Things','Dual Screen','Core','Analytics','Android','Design'], wrapper_html: { class: 'drop role' }, required: false

            = f.input :collaborators, as: :boolean, input_html: { class: 'tick-a' }, wrapper_html: { class: 'tick' }, wrapper: :inline_checkbox

          .results
            %p.count
              = t :results_count, results: 120

            = f.input :sort, as: :select, collection: ['Name', 'Date'], input_html: { class: 'selectize', multiple: true, data: { placeholder: t(:sort, scope: [:simple_form, :placeholders, :search_filter] )}}, wrapper_html: { class: 'sort' }


      = render 'shared/listing_projects'
