%tr
  %td= link_to project_collaborator.name, user_path(project_collaborator.user)
  %td.col-status
    - if project_collaborator.pending?
      =t('pending')
    - elsif project_collaborator.approved?
      =t('approved')

  %td
    - if project_collaborator.pending?
      %button.button-a.small.action--approve{"data-project-collaborator": project_collaborator.id, "data-action": 'PUT'}
        %span.intelicon-check
        = t :approve
    %button.button-a.small.action--remove.red{"data-project-collaborator": project_collaborator.id, "data-action": 'DELETE'}
      %span.intelicon-trash-outlined
      = t :remove
