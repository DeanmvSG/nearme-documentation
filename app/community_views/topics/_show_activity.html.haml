/ content wrapper
.wrap-a.reduce-top
  .contain
    / layout
    .page-a
      .primary
        / white box
        .box-a
          %h1.h2
            = t('activity_feed.title')

          = render 'shared/activity_feed', object: object, feed: feed
      .secondary
        .box-a
          / header with button
          .header-a
            %h2.hx
              = t :projects
              = "(#{@topic.projects.count})"
            %p.action
              = link_to t(:view_all), '#projects', role: "tab", :'data-toggle' => "tab" , class: 'button-a small white'
          .featured
            = render partial: 'shared/project', collection: @topic.projects.last(4)
