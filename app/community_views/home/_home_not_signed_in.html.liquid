<div class="hero-a" style="background-image: url({{ platform_context.hero_url | image_url }});">
  <div class="contain">
    <h2 class="hx">{{ 'hero_slogan' | translate }}</h2>
    <p>{{ 'hero_description' | translate }}</p>
    <p class="action"><a href="https://software.intel.com/registration/dev-mesh/" class="button-a large orange">{{ 'join_now' | translate }}</a></p>
  </div>
</div>
<div class="wrap-a">
  <div class="contain">
    <div class="header-a">
      <h2 class="hx">{{ 'featured_projects' | translate }}</h2>
      <p class="tx-a">{{ 'explore_the_most_popular_projects' | translate }}</p>
      <p class="action"><a href="/search/projects?sort=featured" class='button-a small white'>{{ 'view_all' | translate }}</a></p>
    </div>
    <div class="grid-a-projects-a">
      <div class="wrap">
        {% for project in projects %}
          <div class="cell">
            <article class="card-a" data-equalize>
              <figure><a href="{{ project.show_url }}"><img src="{{ project.cover_photo_url }}" /></a></figure>
              <p class="action">
              <a href="/auth/saml" class='button-a tiny'>{{ 'activity_feed.verbs.follow' | translate }}</a>
              </p>
              <h3 class="hx">
                <a href="{{ project.show_path}}">{{ project.name }}</a>
              </h3>
              <p class="user"><a href="{{ project.creator.profile_path}}"><img src="{{ project.creator.avatar_url_thumb }}" width="30" height="30" />{{ project.creator.name }}</a></p>
              <p>{{ project.summary }}</p>
            </article>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<div class="wrap-a white">
  <div class="contain">
    <div class="header-a">
      <h2 class="hx">
        {{ 'connect_with_influencers' | translate }}
      </h2>
      <p class="tx-a">
      {{ 'connect_with_influencers_description' | translate }}
      </p>
      <p class="action">
      <a href="/search/people?sort=featured" class='button-a small white'>{{ 'view_all' | translate }}</a>
      </p>
    </div>

    <div class="grid-a-people-a">
      <div class="wrap">
        {% for user in users %}
          <div class="cell">
            <article class="card-a" data-equalize>
              <figure><a href="{{ user.profile_path }}"><img src="{{ user.avatar_url_bigger }}"  /></a></figure>
              <p class="action">
              <a href="/auth/saml" class='button-a tiny'>{{ 'activity_feed.verbs.follow' | translate }}</a>
              </p>
              <h3 class="hx">
                <a href="{{ user.profile_path }}">{{ user.name }}</a>
              </h3>
              <p>{{ user.properties.about_me }}</p>
              <p class="location">{{ user.display_location }}</p>
            </article>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
