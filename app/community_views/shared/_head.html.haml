%head
  = render 'layouts/content_holder_injector'
  = inject_content_holder('HEAD')
  = yield(:meta)
  %meta{:charset => "utf-8"}/
  %title= title_tag
  %meta{:content => meta_description_content, :name => "description"}/

  %meta{property: "og:title", content: title_tag}/
  %meta{property: "og:site_name", content: current_instance.name}/
  %meta{property: "og:url", content: request.original_url}/
  %meta{property: "og:description", content: meta_description_content}/
  %meta{property: "og:image", content: meta_og_image_content}/

  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
  = stylesheet_link_tag    'community', media: 'all'

  %link{:href => "#{platform_context.favicon_image.url}", :rel => "shortcut icon"}/

  = render "shared/javascript_assets"
  = javascript_include_tag 'vendor/modernizr'

  = csrf_meta_tags
  = yield(:head_bottom)
