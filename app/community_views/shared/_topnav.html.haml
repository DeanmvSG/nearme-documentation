%nav.skips
  %ul
    %li
      = link_to "#{t(:skip_to_navigation)} [n]", '#nav', accesskey: 'n'
    %li
      = link_to "#{t(:skip_to_content)} [c]", '#content', accesskey: 'c'
    %li
      = link_to "#{t(:skip_to_footer)} [f]", '#footer', accesskey: 'f'

%h2.toggler{"data-nav" => true}
  %span Menu

.wrap
  = simple_form_for '', url: search_url(search_type: :people), html: { class: 'search', id: 'search_topnav' }, method: :get do |f|
    %div
      = f.input :query, label: false, wrapper: :simple, input_html: { value: params[:query], id: 'topnav_query' }, placeholder: t("search")
      %button{:type => "submit"}
        %span
          = t :search_submit

  %nav#nav.nav
    %ul
      %li.people
        = link_to "#{t(:people)} <em>1</em>".html_safe, search_url(search_type: :people), accesskey: 1
      %li.projects
        = link_to "#{t(:projects)} <em>2</em>".html_safe, search_url(search_type: :projects), accesskey: 2
      %li.topics
        = link_to "#{t(:topics)} <em>3</em>".html_safe, search_url(search_type: :topics), accesskey: 3

  .corner
    - if current_user
      .user
        %p.name
          = link_to profile_path(current_user) do
            = image_tag current_user.avatar.url(:thumb), size: "40x40"
            = current_user.first_name
        %ul
          %li{ class: (controller_name == 'registrations' && action_name == 'show' ? 'active' : '') }
            = link_to t(:profile), user_path(current_user)
          - if (project_type = ProjectType.first).present?
            %li{ class: (controller_name == 'projects' ? 'active' : '') }
              = link_to t(:my_projects), dashboard_project_type_projects_path(project_type)
          %li{ class: (controller_name == 'registrations' && action_name != 'show' ? 'active' : '') }
            = link_to t(:account), dashboard_profile_path
          %li
            = link_to t(:log_out), community_logout_path
    - else
      %p.actions
        = link_to t(:log_in), new_user_session_path(wizard: :onboarding), class: 'button-a small orange'

    %p.actions
      - if (project_type = ProjectType.first).present?
        = link_to t(:add_project), new_dashboard_project_type_project_path(project_type), class: 'button-a small orange add'
      - else
        = link_to "ADD PROJECT TYPE IN INSTANCE ADMIN", new_instance_admin_projects_project_type_path, class: 'button-a small orange add'
