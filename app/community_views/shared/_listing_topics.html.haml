- if topics.empty?
  %p.empty-resultset= t('user_profile.empty_resultset.topics')
- else
  - hide_more = false if local_assigns[:hide_more].nil?

  .grid-a-search-a
    .wrap
      - topics.each do |topic|
        = render 'shared/topic', topic: topic

  /more
  - if topics.next_page
    %p.more-a{:'data-see-more' => true, :'data-see-more-type' => "projects"}
      = link_to t(:see_more), see_more_following_topics_path(id: @user.id, type: @user.class.name), remote: true
