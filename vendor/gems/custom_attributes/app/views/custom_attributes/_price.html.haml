- if f.object.transactable_type.pricing_options.present? && f.object.transactable_type.pricing_options.any? { |k, v| v.to_i == 1 }
  - if f.object.respond_to?(:free?) && f.object.free?
    - enable_inputs_daily, enable_inputs_hourly, enable_inputs_free = false, false, true
  - elsif f.object.respond_to?(:hourly_reservations) && f.object.hourly_reservations
    - enable_inputs_daily, enable_inputs_hourly, enable_inputs_free = false, true, false
  - else
    - enable_inputs_daily, enable_inputs_hourly, enable_inputs_free = true, false, false
  %div{:class => "control-group #{"error" if f.object.errors.include?(:free).present?}"}
    = f.label :daily_price, :price, :class => 'control-label flush-top' do
      %abbr{:title => "required"}= t('simple_form.required.mark')
      =t('simple_form.labels.listings.price')

    .controls
      - if f.object.transactable_type.pricing_options['daily'] || f.object.transactable_type.pricing_options['weekly'] || f.object.transactable_type.pricing_options['monthly']
        %div.price-inputs-daily
          %label.radio
            = f.radio_button :price_type, :daily, :checked => enable_inputs_daily
            = f.object.transactable_type.pricing_options_long_period_names.map {|p| t("simple_form.labels.transactable.price_#{p}")}.to_sentence(last_word_connector: " #{t('form.or')} ", two_words_connector: " #{t('form.or')} ")

          .price-input-options
            .price-inputs-wrapper.left
              - f.object.transactable_type.pricing_options_long_period_names.each do |price|
                = render 'custom_attributes/price_field_listing', :f => f, :price => price, :label => t("simple_form.labels.transactable.price.#{price}"), :include_checkbox => true

      - if f.object.transactable_type.pricing_options['hourly']
        %div.price-inputs-hourly
          %label.radio
            = f.radio_button :price_type, :hourly, :checked => enable_inputs_hourly
            = t("simple_form.labels.transactable.price_hourly")

          .price-input-options
            .price-inputs-wrapper.left
              = render 'custom_attributes/price_field_listing', :f => f, :price => :hourly, :label => t("simple_form.labels.transactable.price.hourly")

      - if f.object.errors.include?(:hourly_reservations).present?
        %p.error-block= f.object.errors[:hourly_reservations].first

      - if f.object.transactable_type.pricing_options['free']
        %div.price-inputs-free
          %label.radio
            = f.radio_button :price_type, "free", :checked => enable_inputs_free
            = t("simple_form.labels.transactable.price_free")

      - if f.object.errors.include?(:price_type).present?
        %p.error-block= f.object.errors[:price_type].first

      - if f.object.errors.include?(:free).present?
        %p.error-block
          = t('errors.messages.free_if_zero')

