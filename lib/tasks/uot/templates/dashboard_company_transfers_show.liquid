{% assign i18n_title = 'dashboard.analytics.title' | translate %}
{% title i18n_title %}

{% content_for 'page_header' %}
<h1>{{ i18n_title }}</h1></h1>
{% endcontent_for %}

<div class="panel">
  <div class="panel-body">
    <div class="box">
      <div class="chart">
        <figure class="chart-a">
          <figcaption>
            <form action="" accept-charset="UTF-8" method="get">
              <input name="utf8" type="hidden" value="âœ“"><input type="hidden" name="chart_type" id="chart_type" value="{{ params.chart_type }}">
              {% if chart.money? and currencies.size > 1 %}
              <label for="currency">{{ 'dashboard.analytics.currency' | translate }}</label>
              <select name="currency" id="currency" onchange="this.form.submit()">
                {% for currency in @currencies %}
                <option  {% if params.currency == currency %} selected="selected" {% endif %} value="{{ currency }}">{{currency}}</option>
                {% endfor %}
              </select>
              {% endif %}

              <label for="period">{{ 'dashboard.analytics.period' | translate }}</label>
              <select name="period" id="period" onchange="this.form.submit()">
                <option {% if params.period == 'last_7_days' %} selected="selected" {% endif %} value="last_7_days">{{ 'dashboard.analytics.last_7_days' | translate }}</option>
                <option {% if params.period == 'last_30_days' %} selected="selected" {% endif %}  value="last_30_days">{{ 'dashboard.analytics.last_30_days' | translate }}</option>
              </select>
            </form>
          </figcaption>
          {% if chart.empty? %}
          <p>{{ chart.no_result }} <p>
            {% else %}
            <canvas id="chart"></canvas>
            {% endif %}
          </figure>
        </div>
      </div>

    <div class="table-responsive">
      <table class="table table-simple">
        <thead>
          <tr>
            <th>{{ 'dashboard.analytics.columns.gross') | t }}</th>
            <th>{{ 'dashboard.analytics.columns.fee' | t }}</th>
            <th>{{ 'dashboard.analytics.columns.pg_fee' | t }}</th>
            <th>{{ 'dashboard.analytics.columns.net') | t }}</th>
            <th>{{ 'dashboard.analytics.columns.state' | t }}</th>
            <th>{{ 'dashboard.analytics.columns.date' | t }}</th>
            <th>Included Payments</th>
          </tr>
        </thead>
        <tbody>
          {% for list_item in chart.collection %}
          <tr>
            <td>{{ list_item.gross_amount | render_money }}</td>
            <td>{{ list_item.total_service_fee | render_money }}</td>
            <td>{{ list_item.payment_gateway_fee | render_money }}</td>
            <td>{{ list_item.amount | render_money }}</td>
            <td>{{ list_item.transfer_status }}</td>
            <td>{{ list_item.created_at | l: 'long' }}</td>
            <td><a href='/dashboard/company/analytics/revenue?payment_transfer_id={{list_item.id}}'>Payments</a></td>
          </tr>
          {% endfor %}
          <tr class="total-row">
            <td>{{ chart.total | render_money }}</td>
            <td>{{ 'dashboard.analytics.total.all_time' | t }}</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

{% assign collection = chart.collection %}
{% will_paginate collection: collection, renderer: dashboard %}

{% content_for 'domready' %}
  $(document).trigger('line:chart.nearme', ['#chart', {{ chart.values}} , {{ chart.labels }} ]);
{% endcontent_for %}
